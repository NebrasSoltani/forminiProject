  <!-- ***** Header Area End ***** -->

  <div id="portfolio" class="our-portfolio section">
    <div class="portfolio-left-dec">
      <img src="asset/images/portfolio-left-dec.png" alt="">
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <div class="section-heading">
            <h2>Nos <em>Formateurs</em> <span>Experts</span></h2>
            <span>Une équipe qualifiée et expérimentée</span>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="owl-carousel owl-portfolio">
            {% if formateurs is defined and formateurs|length > 0 %}
              {% for formateur in formateurs %}
                <div class="item">
                  <div class="thumb">
                    {% if formateur.photo %}
                      <img src="{{ asset('uploads/photos/' ~ formateur.photo) }}" alt="{{ formateur.prenom ~ ' ' ~ formateur.nom }}" style="width: 100%; height: 500px; object-fit: cover;">
                    {% else %}
                      <img src="{{ asset('assets/images/users/profile-pic.jpg') }}" alt="{{ formateur.prenom ~ ' ' ~ formateur.nom }}" style="width: 100%; height: 500px; object-fit: cover;">
                    {% endif %}
                    <div class="hover-effect">
                      <div class="inner-content">
                        <a href="#"><h4>{{ formateur.prenom }} {{ formateur.nom }}</h4></a>
                        <span>
                          {% if formateur.formateur and formateur.formateur.specialite %}
                            {{ formateur.formateur.specialite }}
                          {% else %}
                            {{ formateur.profession }}
                          {% endif %}
                        </span>
                        {% if formateur.formateur and formateur.formateur.experienceAnnees %}
                          <p style="margin-top: 10px; font-size: 14px;">
                            <i class="fa fa-briefcase"></i> {{ formateur.formateur.experienceAnnees }} ans d'expérience
                          </p>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            {% else %}
              <div class="item">
                <div class="thumb">
                  <img src="asset/images/portfolio-01.jpg" alt="">
                  <div class="hover-effect">
                    <div class="inner-content">
                      <a href="#"><h4>Aucun formateur</h4></a>
                      <span>Inscrivez-vous comme formateur</span>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
