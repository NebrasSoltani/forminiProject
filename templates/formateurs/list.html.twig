  <script>
  // Acc
    $(document).on("click", ".naccs .menu div", function() {
      var numberIndex = $(this).index();

      if (!$(this).is("active")) {
          $(".naccs .menu div").removeClass("active");
          $(".naccs ul li").removeClass("active");

          $(this).addClass("active");
          $(".naccs ul").find("li:eq(" + numberIndex + ")").addClass("active");

          var listItemHeight = $(".naccs ul")
            .find("li:eq(" + numberIndex + ")")
            .innerHeight();
          $(".naccs ul").height(listItemHeight + "px");
        }
    });

    // User profile dropdown toggle
    $(document).on("click", ".user-profile-dropdown", function(e) {
      e.preventDefault();
      $(this).siblings(".dropdown-menu-profile").slideToggle(200);
    });

    // Close dropdown when clicking outside
    $(document).on("click", function(e) {
      if (!$(e.target).closest(".user-profile-dropdown, .dropdown-menu-profile").length) {
        $(".dropdown-menu-profile").slideUp(200);
      }
    });

    // Hover effects for dropdown items
    $(".dropdown-menu-profile a").hover(
      function() { $(this).css("background-color", "#f8f9fa"); },
      function() { $(this).css("background-color", "#fff"); }
    );
  </script>
