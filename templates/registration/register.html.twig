<script>
document.addEventListener('DOMContentLoaded', function() {
    // Password visibility toggle
    document.querySelectorAll('.toggle-password').forEach(btn => {
        btn.addEventListener('click', function() {
            const input = this.previousElementSibling;
            const isPassword = input.type === 'password';
            
            input.type = isPassword ? 'text' : 'password';
            this.textContent = isPassword ? 'üôà' : 'üëÅÔ∏è';
            this.setAttribute('aria-label', isPassword ? 'Cacher le mot de passe' : 'Afficher le mot de passe');
            
            // Add visual feedback
            input.classList.add('is-invalid');
            setTimeout(() => input.classList.remove('is-invalid'), 300);
        });
    });

    // Role-based fields management
    const roleSelect = document.querySelector('select[name*="roleUtilisateur"]');
    const formateurFields = document.getElementById('formateur-fields');
    const apprenantFields = document.getElementById('apprenant-fields');
    const societeFields = document.getElementById('societe-fields');
    const sections = [formateurFields, apprenantFields, societeFields];

    function showRoleFields() {
        // Hide all sections first
        sections.forEach(section => {
            section.style.display = 'none';
            section.classList.remove('visible');
        });

        // Show relevant section
        const selectedRole = roleSelect.value.trim().toLowerCase();
        let targetSection = null;
        
        if (selectedRole === 'formateur') targetSection = formateurFields;
        else if (selectedRole === 'apprenant') targetSection = apprenantFields;
        else if (selectedRole === 'societe') targetSection = societeFields;

        if (targetSection) {
            targetSection.style.display = 'block';
            setTimeout(() => targetSection.classList.add('visible'), 10);
        }
    }

    if (roleSelect) {
        roleSelect.addEventListener('change', showRoleFields);
        showRoleFields(); // Initialize on load
    }

    // File upload name display
    document.querySelectorAll('.file-input').forEach(input => {
        const fileNameDisplay = input.closest('.custom-file-upload').querySelector('.file-name');
        
        input.addEventListener('change', function() {
            if (this.files.length > 0) {
                const fileName = this.files[0].name.length > 30 
                    ? this.files[0].name.substring(0, 27) + '...' 
                    : this.files[0].name;
                fileNameDisplay.textContent = fileName;
                fileNameDisplay.style.color = '#2b6cb0';
                fileNameDisplay.style.fontStyle = 'normal';
            } else {
                fileNameDisplay.textContent = 'Aucun fichier s√©lectionn√©';
                fileNameDisplay.style.color = '#718096';
                fileNameDisplay.style.fontStyle = 'italic';
            }
        });
    });

    // Add custom interest for apprenant
    const addInterestBtn = document.getElementById('addInterestBtn');
    const autreInput = document.getElementById('autreCentreInteret');
    const checkboxesContainer = document.getElementById('domainesInteretCheckboxes');
    
    if (addInterestBtn && autreInput && checkboxesContainer) {
        function addCustomInterest() {
            const value = autreInput.value.trim();
            if (!value) return;
            
            // Check if already exists
            const existing = Array.from(checkboxesContainer.querySelectorAll('input[type="checkbox"]'))
                .some(cb => cb.value.toLowerCase() === value.toLowerCase());
            
            if (existing) {
                autreInput.value = '';
                return;
            }
            
            // Create new checkbox
            const id = 'domainesInteret_custom_' + Date.now();
            const div = document.createElement('div');
            div.className = 'form-check';
            
            const input = document.createElement('input');
            input.type = 'checkbox';
            input.name = 'registration_form[domainesInteret][]';
            input.value = value;
            input.id = id;
            input.className = 'form-check-input';
            input.checked = true;
            
            const label = document.createElement('label');
            label.className = 'form-check-label';
            label.htmlFor = id;
            label.textContent = value;
            
            div.appendChild(input);
            div.appendChild(label);
            checkboxesContainer.appendChild(div);
            
            // Clear input and provide feedback
            autreInput.value = '';
            autreInput.focus();
            
            // Visual feedback
            autreInput.classList.add('is-valid');
            setTimeout(() => autreInput.classList.remove('is-valid'), 1500);
        }
        
        addInterestBtn.addEventListener('click', addCustomInterest);
        autreInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') addCustomInterest();
        });
    }
});
</script>
