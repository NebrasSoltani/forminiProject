<style>
:root {
    --primary: #6974e8;
    --secondary: #6974e8;
    --success: #4cc9f0;
    --light: #f8f9fa;
    --dark: #212529;
    --border-radius: 12px;
    --box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    --transition: all 0.3s ease;
}

.form-container {
    animation: fadeIn 0.6s ease-out;
    box-shadow: var(--box-shadow);
    border-radius: var(--border-radius);
    overflow: hidden;
    margin-top: 2rem;
}

.card-header {
    background: linear-gradient(120deg, var(--primary), #6974e8);
    padding: 1.8rem;
    text-align: center;
    position: relative;
}
.d-flex{
    color:white;
}
.card-header h2 {
    font-weight: 700;
    letter-spacing: -0.5px;
    font-size: 1.8rem;
    color:black;
}

.card-header small {
    opacity: 0.9;
    font-size: 1.1rem;
    display: block;
    margin-top: 0.3rem;
    color:#ffffff;
}

.form-section {
    padding: 1.8rem;
    background: white;
}

.form-row {
    margin-bottom: 1.5rem;
}

.form-group {
    margin-bottom: 1.3rem;
}

.form-label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 0.95rem;
}

.form-control, .form-select {
    border: 1.5px solid #e2e8f0;
    padding: 0.75rem 1.1rem;
    border-radius: 10px;
    transition: var(--transition);
    font-size: 1rem;
    height: calc(2.6rem + 2px);
}

.form-control:focus, .form-select:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
    outline: none;
}

.form-control::placeholder {
    color: #a0aec0;
}

/* Custom file upload */
.custom-file-upload {
    position: relative;
    border: 2px dashed #cbd5e0;
    border-radius: 12px;
    padding: 1.2rem;
    text-align: center;
    background-color: #f8fafc;
    cursor: pointer;
    transition: var(--transition);
}

.custom-file-upload:hover {
    border-color: var(--primary);
    background-color: #edf2f7;
}

.custom-file-upload i {
    font-size: 2.2rem;
    color: var(--primary);
    margin-bottom: 0.5rem;
    display: block;
}

.custom-file-upload label {
    cursor: pointer;
    display: block;
    font-weight: 500;
    color: var(--secondary);
}

.file-input {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
}

.file-name {
    margin-top: 0.5rem;
    font-size: 0.85rem;
    color: #4a5568;
    min-height: 1.2rem;
    font-style: italic;
}

/* Role selection enhancement */
.role-select-container {
    position: relative;
}

.role-select-container::before {
    content: "üéØ";
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.2rem;
    pointer-events: none;
    opacity: 0.7;
}

.role-select-container select {
    padding-left: 2.8rem !important;
}

/* Role-specific sections */
.role-section {
    background: #f8fafc;
    border-radius: var(--border-radius);
    padding: 1.8rem;
    margin-top: 1.5rem;
    border-left: 4px solid var(--primary);
    box-shadow: var(--box-shadow);
    display: none;
    animation: slideIn 0.4s ease-out;
}

#formateur-fields.role-section { border-left-color: #7209b7; background: #f9f7ff; }
#apprenant-fields.role-section { border-left-color: #4cc9f0; background: #f6feff; }
#societe-fields.role-section { border-left-color: #4895ef; background: #f8fdff; }

.role-section-title {
    display: flex;
    align-items: center;
