{% extends 'base.html.twig' %}

{% block title %}Modifier Événement{% endblock %}

{% block body %}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">Modifier l'Événement</h4>
                    <div class="page-title-right">
                        <a href="{{ path('admin_evenement_index') }}" class="btn btn-secondary">
                            <i class="mdi mdi-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.titre) }}
                                {{ form_widget(form.titre) }}
                                {{ form_errors(form.titre) }}
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.type) }}
                                    {{ form_widget(form.type) }}
                                    {{ form_errors(form.type) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nombrePlaces) }}
                                    {{ form_widget(form.nombrePlaces) }}
                                    {{ form_errors(form.nombrePlaces) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.dateDebut) }}
                                    {{ form_widget(form.dateDebut) }}
                                    {{ form_errors(form.dateDebut) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.dateFin) }}
                                    {{ form_widget(form.dateFin) }}
                                    {{ form_errors(form.dateFin) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.lieu) }}
                                {{ form_widget(form.lieu) }}
                                {{ form_errors(form.lieu) }}
                            </div>

                            <div class="mb-3">
                                {% if evenement.image %}
                                    <div class="mb-2">
                                        <label class="form-label">Image actuelle:</label><br>
                                        <img src="{{ asset('uploads/evenements/' ~ evenement.image) }}" alt="{{ evenement.titre }}" style="max-width: 300px; border-radius: 5px;">
                                    </div>
                                {% endif %}
                                {{ form_label(form.image) }}
                                {{ form_widget(form.image) }}
                                {{ form_errors(form.image) }}
                                <small class="text-muted">Formats acceptés: JPG, PNG, GIF (Max 5MB). Laissez vide pour conserver l'image actuelle.</small>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    {{ form_widget(form.isActif) }}
                                    {{ form_label(form.isActif) }}
                                </div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="mdi mdi-content-save"></i> Enregistrer les Modifications
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Informations</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><strong>Organisateur:</strong> {{ evenement.organisateur.prenom }} {{ evenement.organisateur.nom }}</li>
                            <li class="mb-2"><strong>Type:</strong> <span class="badge badge-info">{{ evenement.type }}</span></li>
                            <li class="mb-2"><strong>Statut:</strong> 
                                {% if evenement.isActif %}
                                    <span class="badge badge-success">Actif</span>
                                {% else %}
                                    <span class="badge badge-secondary">Inactif</span>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
