{% extends 'base.html.twig' %}

{% block title %}Participants - {{ evenement.titre }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Participants : {{ evenement.titre }}</h1>
        <a href="{{ path('admin_evenement_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des inscrits ({{ participations|length }})</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nom & Prénom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Date d'inscription</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participation in participations %}
                            <tr>
                                <td>{{ participation.user.nom }} {{ participation.user.prenom }}</td>
                                <td>{{ participation.user.email }}</td>
                                <td>{{ participation.user.telephone }}</td>
                                <td>{{ participation.dateParticipation|date('d/m/Y H:i') }}</td>
                                <td class="text-center">
                                    <a href="{{ path('admin_participation_ticket', {id: participation.id}) }}" 
                                       target="_blank"
                                       class="btn btn-sm btn-outline-primary" 
                                       title="Voir le Billet">
                                        <i class="fas fa-ticket-alt me-1"></i> Billet
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucun participant inscrit pour le moment.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
