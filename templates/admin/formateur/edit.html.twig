{% extends 'base.html.twig' %}

{% block body %}
<!-- Flash messages -->
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type == 'success' ? 'success' : 'danger' }} alert-dismissible fade show mt-3" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-{{ type == 'success' ? 'check-circle-fill' : 'exclamation-triangle-fill' }} me-2"></i>
                <span>{{ message }}</span>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    {% endfor %}
{% endfor %}

<style>
    /* Modern form styling */
    .form-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
    }
    
    .form-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px 15px 0 0;
        text-align: center;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    
    .form-header h1 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
    }
    
    .form-header p {
        margin: 0.5rem 0 0 0;
        opacity: 0.9;
        font-size: 1.1rem;
    }
    
    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }
    
    .form-section {
        padding: 2rem;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .form-section:last-child {
        border-bottom: none;
    }
    
    .section-title {
        color: #333;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }
    
    .section-title i {
        margin-right: 0.5rem;
        color: #667eea;
    }
    
    .form-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    
    .form-control, .form-select {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        outline: none;
    }
    
    .form-control.is-invalid {
        border-color: #dc3545;
    }
    
    .invalid-feedback {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    
    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #6c757d;
        cursor: pointer;
        z-index: 10;
    }
    
    .password-toggle:hover {
        color: #667eea;
    }
    
    .password-input-group {
        position: relative;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }
    
    .btn-secondary {
        background: #6c757d;
        border: none;
        border-radius: 10px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-secondary:hover {
        background: #5a6268;
        transform: translateY(-2px);
    }
    
    .form-actions {
        padding: 2rem;
        background: #f8f9fa;
        text-align: center;
    }
    
    .checkbox-wrapper {
        display: flex;
        align-items: center;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 10px;
        margin-bottom: 1rem;
    }
    
    .checkbox-wrapper input[type="checkbox"] {
        width: 1.2rem;
        height: 1.2rem;
        margin-right: 0.75rem;
    }
    
    .checkbox-wrapper label {
        margin: 0;
        font-weight: 500;
        color: #333;
    }
    
    @media (max-width: 768px) {
        .form-container {
            padding: 1rem;
        }
        
        .form-header {
            padding: 1.5rem;
        }
        
        .form-header h1 {
            font-size: 1.5rem;
        }
        
        .form-section {
            padding: 1.5rem;
        }
    }
</style>

<div class="form-container">
    <!-- Header -->
    <div class="form-header">
        <h1><i class="bi bi-person-badge me-2"></i>Modifier le formateur</h1>
        <p>Mettez à jour les informations du formateur</p>
    </div>

    <!-- Form -->
    <div class="form-card">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        
        <!-- Informations personnelles -->
        <div class="form-section">
            <h2 class="section-title">
                <i class="bi bi-person-circle"></i>
                Informations personnelles
            </h2>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'email@example.com'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                
                <div class="col-md-6 mb-3">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du formateur'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom du formateur'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
                
                <div class="col-md-6 mb-3">
                    {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': '+216 12 345 678'}}) }}
                    {{ form_errors(form.telephone) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.gouvernorat, 'Gouvernorat', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.gouvernorat, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.gouvernorat) }}
                </div>
                
                <div class="col-md-6 mb-3">
                    {{ form_label(form.dateNaissance, 'Date de naissance', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateNaissance) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-12 mb-3">
                    {{ form_label(form.profession, 'Profession', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.profession, {'attr': {'class': 'form-control', 'placeholder': 'Développeur, designer, etc.'}}) }}
                    {{ form_errors(form.profession) }}
                </div>
            </div>
        </div>

        <!-- Informations professionnelles -->
        <div class="form-section">
            <h2 class="section-title">
                <i class="bi bi-briefcase"></i>
                Informations professionnelles
            </h2>
            
            <div class="row">
                <div class="col-12 mb-3">
                    {{ form_label(form.specialite, 'Spécialité', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.specialite, {'attr': {'class': 'form-control', 'placeholder': 'Développement Web, Data Science, etc.'}}) }}
                    {{ form_errors(form.specialite) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.experienceAnnees, 'Années d\'expérience', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.experienceAnnees, {'attr': {'class': 'form-control', 'placeholder': 'Nombre d\'années', 'min': 0}}) }}
                    {{ form_errors(form.experienceAnnees) }}
                </div>
                
                <div class="col-md-6 mb-3">
                    {{ form_label(form.bio, 'Biographie', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.bio, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Parlez-nous de votre expérience et expertise...'}}) }}
                    {{ form_errors(form.bio) }}
                </div>
            </div>
        </div>

        <!-- Réseaux et portfolio -->
        <div class="form-section">
            <h2 class="section-title">
                <i class="bi bi-globe"></i>
                Réseaux et portfolio
            </h2>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.linkedin, 'Profil LinkedIn', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.linkedin, {'attr': {'class': 'form-control', 'placeholder': 'https://linkedin.com/in/votre-profil'}}) }}
                    {{ form_errors(form.linkedin) }}
                </div>
                
                <div class="col-md-6 mb-3">
                    {{ form_label(form.portfolio, 'Portfolio', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.portfolio, {'attr': {'class': 'form-control', 'placeholder': 'https://votre-portfolio.com'}}) }}
                    {{ form_errors(form.portfolio) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-12 mb-3">
                    {{ form_label(form.cv, 'CV', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.cv, {'attr': {'class': 'form-control', 'placeholder': 'Lien vers votre CV ou description'}}) }}
                    {{ form_errors(form.cv) }}
                </div>
            </div>
        </div>

        <!-- Sécurité -->
        <div class="form-section">
            <h2 class="section-title">
                <i class="bi bi-shield-check"></i>
                Sécurité
            </h2>
            
            <div class="row">
                <div class="col-12 mb-3">
                    {{ form_label(form.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="password-input-group">
                        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Laissez vide pour ne pas changer le mot de passe'}}) }}
                        <button type="button" class="password-toggle" onclick="togglePassword(this)">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    {{ form_errors(form.plainPassword) }}
                    <small class="text-muted">Laissez ce champ vide pour conserver le mot de passe actuel</small>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-lg me-3">
                <i class="bi bi-check-circle me-2"></i>Mettre à jour le formateur
            </button>
            
            <a href="{{ path('admin_formateur_show', {id: formateur.id}) }}" class="btn btn-secondary btn-lg me-2">
                <i class="bi bi-eye me-2"></i>Voir les détails
            </a>
            
            <a href="{{ path('admin_formateur_index') }}" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-2"></i>Retour à la liste
            </a>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>

<script>
function togglePassword(button) {
    const passwordInput = button.previousElementSibling;
    const icon = button.querySelector('i');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        icon.classList.remove('bi-eye');
        icon.classList.add('bi-eye-slash');
    } else {
        passwordInput.type = 'password';
        icon.classList.remove('bi-eye-slash');
        icon.classList.add('bi-eye');
    }
}

// Form validation
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const submitButton = form.querySelector('button[type="submit"]');
    
    form.addEventListener('submit', function(e) {
        const email = form.querySelector('[name*="[email]"]');
        const nom = form.querySelector('[name*="[nom]"]');
        const prenom = form.querySelector('[name*="[prenom]"]');
        const telephone = form.querySelector('[name*="[telephone]"]');
        
        let isValid = true;
        
        // Basic validation
        if (!email.value.trim()) {
            email.classList.add('is-invalid');
            isValid = false;
        } else {
            email.classList.remove('is-invalid');
        }
        
        if (!nom.value.trim()) {
            nom.classList.add('is-invalid');
            isValid = false;
        } else {
            nom.classList.remove('is-invalid');
        }
        
        if (!prenom.value.trim()) {
            prenom.classList.add('is-invalid');
            isValid = false;
        } else {
            prenom.classList.remove('is-invalid');
        }
        
        if (!telephone.value.trim()) {
            telephone.classList.add('is-invalid');
            isValid = false;
        } else {
            telephone.classList.remove('is-invalid');
        }
        
        if (!isValid) {
            e.preventDefault();
            
            // Scroll to first error
            const firstError = form.querySelector('.is-invalid');
            if (firstError) {
                firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                firstError.focus();
            }
        }
    });
    
    // Remove invalid class on input
    form.querySelectorAll('.form-control').forEach(input => {
        input.addEventListener('input', function() {
            this.classList.remove('is-invalid');
        });
    });
});
</script>
{% endblock %}
