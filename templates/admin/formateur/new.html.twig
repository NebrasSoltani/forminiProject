<style>
:root {
    --primary: #6974e8;
    --secondary: #6974e8;
    --success: #4cc9f0;
    --light: #f8f9fa;
    --dark: #212529;
    --border-radius: 12px;
    --box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    --transition: all 0.3s ease;
}

.form-container {
    animation: fadeIn 0.6s ease-out;
    box-shadow: var(--box-shadow);
    border-radius: var(--border-radius);
    overflow: hidden;
    margin-top: 2rem;
}

.card-header {
    background: linear-gradient(120deg, var(--primary), #6974e8);
    padding: 1.8rem;
    text-align: center;
    position: relative;
}

.card-header h2 {
    font-weight: 700;
    letter-spacing: -0.5px;
    font-size: 1.8rem;
    color: white;
}

.card-header small {
    opacity: 0.9;
    font-size: 1.1rem;
    display: block;
    margin-top: 0.3rem;
    color: #ffffff;
}

.form-section {
    padding: 1.8rem;
    background: white;
}

.form-group {
    margin-bottom: 1.3rem;
}

.form-label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 0.95rem;
}

.form-control, .form-select {
    border: 1.5px solid #e2e8f0;
    padding: 0.75rem 1.1rem;
    border-radius: 10px;
    transition: var(--transition);
    font-size: 1rem;
    height: calc(2.6rem + 2px);
}

.form-control:focus, .form-select:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
    outline: none;
}

.form-control::placeholder {
    color: #a0aec0;
}

/* Checkbox grid */
.checkbox-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 0.75rem;
    margin-top: 0.75rem;
    padding: 0.5rem;
    background: white;
    border-radius: 10px;
    border: 1px solid #e2e8f0;
}

.form-check {
    margin: 0;
    padding-left: 1.8rem;
}

.form-check-input {
    width: 1.3rem;
    height: 1.3rem;
    margin-top: 0.2rem;
    border: 1.5px solid #cbd5e0;
    border-radius: 4px;
}

.form-check-input:checked {
    background-color: var(--primary);
    border-color: var(--primary);
}

.form-check-label {
    font-weight: 500;
    padding: 0.25rem 0;
    display: block;
    cursor: pointer;
}

/* Form errors */
.form-error {
    color: #e53e3e;
    font-size: 0.875rem;
    margin-top: 0.4rem;
    display: block;
    font-weight: 500;
    padding-left: 0.25rem;
}

.is-invalid {
    border-color: #e53e3e !important;
    background-color: #fff5f5;
}

/* Submit button */
.btn-submit {
    background: linear-gradient(120deg, var(--primary), var(--secondary));
    border: none;
    padding: 0.95rem 2.5rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    font-size: 1.1rem;
    box-shadow: 0 4px 15px rgba(67, 97, 238, 0.35);
    transition: var(--transition);
    width: 100%;
    margin-top: 0.5rem;
}

.btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(67, 97, 238, 0.45);
    background: linear-gradient(120deg, var(--secondary), #323c9e);
}

.btn-back {
    background: #6c757d;
    border: none;
    padding: 0.95rem 2.5rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    font-size: 1rem;
    color: white;
    border-radius: 10px;
    transition: var(--transition);
    text-decoration: none;
    display: inline-block;
}

.btn-back:hover {
    background: #5a6268;
    transform: translateY(-2px);
}

/* Helper text */
.form-text {
    font-size: 0.85rem;
    color: #718096;
    margin-top: 0.35rem;
    padding-left: 0.25rem;
}

/* Animations */
@keyframes fadeIn {
    from { 
        opacity: 0; 
        transform: translateY(20px);
    }
    to { 
        opacity: 1; 
        transform: translateY(0);
    }
}
</style>

