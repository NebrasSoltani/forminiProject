{# templates/blog/public_show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ blog.titre }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <article class="blog-post">
                <header class="mb-4">
                    <h1 class="display-5 fw-bold">{{ blog.titre }}</h1>
                    
                    <div class="d-flex flex-wrap align-items-center gap-3 mt-3">
                        <span class="badge bg-primary fs-6">{{ blog.categorie }}</span>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user me-2 text-muted"></i>
                            <span>{{ blog.auteur.prenom }} {{ blog.auteur.nom }}</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar me-2 text-muted"></i>
                            <span>{{ blog.datePublication|date('d/m/Y') }}</span>
                        </div>
                    </div>
                </header>

                {% if blog.image %}
                <div class="mb-5 text-center">
                    <img src="{{ asset('uploads/blogs/' ~ blog.image) }}" 
                         alt="{{ blog.titre }}" 
                         class="img-fluid rounded" 
                         style="max-height: 400px; object-fit: cover;">
                </div>
                {% endif %}

                <div class="blog-content fs-5">
                    {{ blog.contenu|raw }}
                </div>

                {% if blog.evenement %}
                <div class="mt-5 p-4 bg-light rounded">
                    <h4 class="mb-3">Événement associé</h4>
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h5 class="mb-1">{{ blog.evenement.titre }}</h5>
                            <p class="mb-1 text-muted">{{ blog.evenement.description|slice(0, 100) }}...</p>
                            <small class="text-muted">
                                <i class="fas fa-calendar-alt me-1"></i>
                                {{ blog.evenement.dateDebut|date('d/m/Y H:i') }}
                            </small>
                        </div>
                    </div>
                </div>
                {% endif %}
            </article>
        </div>
    </div>
</div>
{% endblock %}