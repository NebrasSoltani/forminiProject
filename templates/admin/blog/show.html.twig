{# templates/blog/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ blog.titre }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <article class="blog-post">
                <header class="mb-4">
                    <h1 class="display-5 fw-bold">{{ blog.titre }}</h1>
                    
                    <div class="d-flex flex-wrap align-items-center gap-3 mt-3">
                        <span class="badge bg-primary fs-6">{{ blog.categorie }}</span>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user me-2 text-muted"></i>
                            <span>{{ blog.auteur.prenom }} {{ blog.auteur.nom }}</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar me-2 text-muted"></i>
                            <span>{{ blog.datePublication|date('d/m/Y') }}</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-{{ blog.isPublie ? 'success' : 'warning' }}">
                                {{ blog.isPublie ? 'Publié' : 'Brouillon' }}
                            </span>
                        </div>
                    </div>
                </header>

                {% if blog.image %}
                <div class="mb-5">
                    <img src="{{ asset('uploads/blogs/' ~ blog.image) }}" 
                         alt="{{ blog.titre }}" 
                         class="img-fluid rounded">
                </div>
                {% endif %}

                <div class="blog-content fs-5">
                    {{ blog.contenu|raw }}
                </div>

                <div class="mt-5 pt-4 border-top">
                    <a href="{{ path('admin_blog_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                    </a>
                </div>
            </article>
        </div>
    </div>
</div>
{% endblock %}