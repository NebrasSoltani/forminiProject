{% extends 'base.html.twig' %}

{% block title %}Nouveau Blog{% endblock %}

{% block body %}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">Créer un Nouveau Blog</h4>
                    <div class="page-title-right">
                        <a href="{{ path('admin_blog_index') }}" class="btn btn-secondary">
                            <i class="mdi mdi-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {# Le reste du formulaire #}

                            <div class="mb-3">
                                {{ form_label(form.titre) }}
                                {{ form_widget(form.titre) }}
                                {{ form_errors(form.titre) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.categorie) }}
                                {{ form_widget(form.categorie) }}
                                {{ form_errors(form.categorie) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.resume) }}
                                {{ form_widget(form.resume) }}
                                {{ form_errors(form.resume) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.contenu) }}
                                {{ form_widget(form.contenu) }}
                                {{ form_errors(form.contenu) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.image) }}
                                {{ form_widget(form.image) }}
                                {{ form_errors(form.image) }}
                                <small class="text-muted">Formats acceptés: JPG, PNG, GIF (Max 5MB)</small>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    {{ form_widget(form.isPublie) }}
                                    {{ form_label(form.isPublie) }}
                                </div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="mdi mdi-content-save"></i> Créer le Blog
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Conseils</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="mdi mdi-chevron-right text-primary"></i> Choisissez un titre accrocheur</li>
                            <li class="mb-2"><i class="mdi mdi-chevron-right text-primary"></i> Rédigez un résumé clair et concis</li>
                            <li class="mb-2"><i class="mdi mdi-chevron-right text-primary"></i> Utilisez une image de bonne qualité</li>
                            <li class="mb-2"><i class="mdi mdi-chevron-right text-primary"></i> Vérifiez l'orthographe et la grammaire</li>
                            <li class="mb-2"><i class="mdi mdi-chevron-right text-primary"></i> Structurez votre contenu avec des paragraphes</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
