{% extends 'base.html.twig' %}

{% block title %}Statistiques des Blogs{% endblock %}

{% block body %}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0"><i class="mdi mdi-chart-bar"></i> Statistiques des Blogs</h4>
                    <div class="page-title-right">
                        <a href="{{ path('admin_blog_index') }}" class="btn btn-secondary">
                            <i class="mdi mdi-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>

        {# Cartes statistiques principales #}
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Blogs
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ totalBlogs }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="mdi mdi-post text-primary" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Blogs Publiés
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ blogsPublies }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="mdi mdi-check-circle text-success" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Brouillons
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ blogsBrouillons }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="mdi mdi-clock-outline text-warning" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Blogs/Mois (Moyenne)
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ moyenneParMois }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="mdi mdi-calendar-month text-info" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Statistiques supplémentaires #}
        <div class="row">
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-dark shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                                    Blogs avec Événements
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ blogsAvecEvenements }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="mdi mdi-link-variant text-dark" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-secondary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                    Taux de Publication
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    {% if totalBlogs > 0 %}
                                        {{ ((blogsPublies / totalBlogs) * 100)|round(1) }}%
                                    {% else %}
                                        0%
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="mdi mdi-percent text-secondary" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Catégories Différentes
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ blogsByCategory|length }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="mdi mdi-tag-multiple text-success" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Graphiques #}
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="mdi mdi-chart-pie"></i> Répartition par Catégorie</h5>
                    </div>
                    <div class="card-body">
                        {% if blogsByCategory|length > 0 %}
                            <canvas id="categoryChart" width="400" height="300"></canvas>
                            
                            <div class="table-responsive mt-3">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Catégorie</th>
                                            <th class="text-end">Nombre</th>
                                            <th class="text-end">%</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in blogsByCategory %}
                                            <tr>
                                                <td><span class="badge badge-info">{{ item.categorie }}</span></td>
                                                <td class="text-end"><strong>{{ item.total }}</strong></td>
                                                <td class="text-end">
                                                    {{ ((item.total / totalBlogs) * 100)|number_format(1) }}%
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="text-muted text-center">Aucune donnée disponible</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="mdi mdi-account-multiple"></i> Top 10 des Auteurs</h5>
                    </div>
                    <div class="card-body">
                        {% if blogsByAuthor|length > 0 %}
                            <canvas id="authorChart" width="400" height="300"></canvas>
                            
                            <div class="table-responsive mt-3">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Auteur</th>
                                            <th class="text-end">Nombre de blogs</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in blogsByAuthor %}
                                            <tr>
                                                <td>{{ item.auteur }}</td>
                                                <td class="text-end"><strong>{{ item.total }}</strong></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="text-muted text-center">Aucune donnée disponible</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Graphique d'évolution #}
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="mdi mdi-chart-line"></i> Évolution (6 derniers mois)</h5>
                    </div>
                    <div class="card-body">
                        {% if blogsByMonth|length > 0 %}
                            <canvas id="monthChart" width="400" height="200"></canvas>
                        {% else %}
                            <p class="text-muted text-center">Aucune donnée disponible</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0"><i class="mdi mdi-clock-outline"></i> Blogs Récents</h5>
                    </div>
                    <div class="card-body">
                        {% if blogsRecents|length > 0 %}
                            <div class="list-group">
                                {% for blog in blogsRecents %}
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">{{ blog.titre|length > 30 ? blog.titre|slice(0, 30) ~ '...' : blog.titre }}</h6>
                                                <small class="text-muted">
                                                    <i class="mdi mdi-calendar"></i> {{ blog.datePublication|date('d/m/Y') }}
                                                </small>
                                            </div>
                                            <span class="badge bg-{{ blog.isPublie ? 'success' : 'warning' }}">
                                                {{ blog.isPublie ? 'Publié' : 'Brouillon' }}
                                            </span>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted text-center">Aucun blog récent</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Chart.js #}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Graphique par catégorie (Pie Chart)
    {% if blogsByCategory|length > 0 %}
    const ctxCategory = document.getElementById('categoryChart').getContext('2d');
    new Chart(ctxCategory, {
        type: 'pie',
        data: {
            labels: [{% for item in blogsByCategory %}'{{ item.categorie }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                data: [{% for item in blogsByCategory %}{{ item.total }}{% if not loop.last %},{% endif %}{% endfor %}],
                backgroundColor: [
                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', 
                    '#9966FF', '#FF9F40', '#FF6384', '#C9CBCF'
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
    {% endif %}

    // Graphique par auteur (Bar Chart)
    {% if blogsByAuthor|length > 0 %}
    const ctxAuthor = document.getElementById('authorChart').getContext('2d');
    new Chart(ctxAuthor, {
        type: 'bar',
        data: {
            labels: [{% for item in blogsByAuthor %}'{{ item.auteur }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                label: 'Nombre de blogs',
                data: [{% for item in blogsByAuthor %}{{ item.total }}{% if not loop.last %},{% endif %}{% endfor %}],
                backgroundColor: 'rgba(40, 167, 69, 0.8)',
                borderColor: 'rgba(40, 167, 69, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
    {% endif %}

    // Graphique d'évolution par mois (Line Chart)
    {% if blogsByMonth|length > 0 %}
    const ctxMonth = document.getElementById('monthChart').getContext('2d');
    new Chart(ctxMonth, {
        type: 'line',
        data: {
            labels: [{% for item in blogsByMonth %}'{{ item.mois }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                label: 'Nombre de blogs',
                data: [{% for item in blogsByMonth %}{{ item.total }}{% if not loop.last %},{% endif %}{% endfor %}],
                borderColor: 'rgba(23, 162, 184, 1)',
                backgroundColor: 'rgba(23, 162, 184, 0.2)',
                borderWidth: 2,
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
    {% endif %}
</script>

<style>
.border-left-primary { border-left: 4px solid #4e73df !important; }
.border-left-success { border-left: 4px solid #1cc88a !important; }
.border-left-info { border-left: 4px solid #36b9cc !important; }
.border-left-warning { border-left: 4px solid #f6c23e !important; }
.border-left-secondary { border-left: 4px solid #858796 !important; }
.border-left-dark { border-left: 4px solid #5a5c69 !important; }
.text-xs { font-size: .7rem; }
</style>
{% endblock %}
