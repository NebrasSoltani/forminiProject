{% extends 'base.html.twig' %}

{% block title %}Statistiques des Blogs{% endblock %}

{% block stylesheets %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<style>
    .stat-card {
        border-radius: 10px;
        padding: 20px;
        color: white;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .stat-card h3 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 5px;
    }
    .stat-card p {
        font-size: 0.9rem;
        opacity: 0.9;
    }
    .chart-container {
        position: relative;
        height: 300px;
        margin-bottom: 30px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="page-header d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Statistiques des Blogs
                </h1>
                <a href="{{ path('admin_blog_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>

    {# Cartes de statistiques #}
    <div class="row">
        <div class="col-md-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h3>{{ totalBlogs }}</h3>
                <p><i class="fas fa-blog me-1"></i> Total de blogs</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <h3>{{ blogsPublies }}</h3>
                <p><i class="fas fa-check-circle me-1"></i> Blogs publiés</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <h3>{{ blogsBrouillons }}</h3>
                <p><i class="fas fa-clock me-1"></i> Brouillons</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <h3>{{ moyenneParMois }}</h3>
                <p><i class="fas fa-calendar-alt me-1"></i> Blogs/mois (moyenne)</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tags me-2"></i>Blogs par catégorie
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Top 10 des auteurs
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="authorChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Évolution (6 derniers mois)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="monthChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>Blogs récents
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% for blog in blogsRecents %}
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">{{ blog.titre|length > 30 ? blog.titre|slice(0, 30) ~ '...' : blog.titre }}</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>{{ blog.datePublication|date('d/m/Y') }}
                                        </small>
                                    </div>
                                    <span class="badge bg-{{ blog.isPublie ? 'success' : 'warning' }}">
                                        {{ blog.isPublie ? 'Publié' : 'Brouillon' }}
                                    </span>
                                </div>
                            </div>
                        {% else %}
                            <p class="text-muted text-center py-3">Aucun blog récent</p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informations
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <strong>Blogs avec événements :</strong><br>
                            <span class="text-muted">{{ blogsAvecEvenements }} / {{ totalBlogs }}</span>
                        </li>
                        <li class="mb-2">
                            <strong>Taux de publication :</strong><br>
                            <span class="text-muted">
                                {% if totalBlogs > 0 %}
                                    {{ ((blogsPublies / totalBlogs) * 100)|round(1) }}%
                                {% else %}
                                    0%
                                {% endif %}
                            </span>
                        </li>
                        <li>
                            <strong>Catégories différentes :</strong><br>
                            <span class="text-muted">{{ blogsByCategory|length }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
// Graphique par catégorie
const categoryCtx = document.getElementById('categoryChart').getContext('2d');
new Chart(categoryCtx, {
    type: 'doughnut',
    data: {
        labels: [
            {% for item in blogsByCategory %}
                '{{ item.categorie }}'{% if not loop.last %},{% endif %}
            {% endfor %}
        ],
        datasets: [{
            data: [
                {% for item in blogsByCategory %}
                    {{ item.total }}{% if not loop.last %},{% endif %}
                {% endfor %}
            ],
            backgroundColor: [
                '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                '#FF9F40', '#FF6384', '#C9CBCF', '#4BC0C0', '#FF6384'
            ]
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'bottom'
            }
        }
    }
});

// Graphique par auteur
const authorCtx = document.getElementById('authorChart').getContext('2d');
new Chart(authorCtx, {
    type: 'bar',
    data: {
        labels: [
            {% for item in blogsByAuthor %}
                '{{ item.auteur }}'{% if not loop.last %},{% endif %}
            {% endfor %}
        ],
        datasets: [{
            label: 'Nombre de blogs',
            data: [
                {% for item in blogsByAuthor %}
                    {{ item.total }}{% if not loop.last %},{% endif %}
                {% endfor %}
            ],
            backgroundColor: '#667eea'
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});

// Graphique par mois
const monthCtx = document.getElementById('monthChart').getContext('2d');
new Chart(monthCtx, {
    type: 'line',
    data: {
        labels: [
            {% for item in blogsByMonth %}
                '{{ item.mois }}'{% if not loop.last %},{% endif %}
            {% endfor %}
        ],
        datasets: [{
            label: 'Nombre de blogs',
            data: [
                {% for item in blogsByMonth %}
                    {{ item.total }}{% if not loop.last %},{% endif %}
                {% endfor %}
            ],
            borderColor: '#4facfe',
            backgroundColor: 'rgba(79, 172, 254, 0.1)',
            tension: 0.4,
            fill: true
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});
</script>
{% endblock %}