{% extends 'base.html.twig' %}

{% block body %}
<h1>Détails apprenant</h1>

<table border="1">
    <tr><th>ID</th><td>{{ apprenant.id }}</td></tr>
    <tr><th>Email</th><td>{{ apprenant.user.email }}</td></tr>
    <tr><th>Nom</th><td>{{ apprenant.user.nom }}</td></tr>
    <tr><th>Prénom</th><td>{{ apprenant.user.prenom }}</td></tr>
    <tr><th>Téléphone</th><td>{{ apprenant.user.telephone }}</td></tr>
    <tr><th>Gouvernorat</th><td>{{ apprenant.user.gouvernorat ? apprenant.user.gouvernorat.value : '' }}</td></tr>
    <tr><th>Date naissance</th><td>{{ apprenant.user.dateNaissance ? apprenant.user.dateNaissance|date('Y-m-d') : '' }}</td></tr>
    <tr><th>Niveau étude</th><td>{{ apprenant.niveauEtude }}</td></tr>
    <tr><th>Genre</th><td>{{ apprenant.genre }}</td></tr>
    <tr><th>État civil</th><td>{{ apprenant.etatCivil }}</td></tr>
    <tr><th>Objectif</th><td>{{ apprenant.objectif }}</td></tr>
</table>

<a href="{{ path('admin_apprenant_edit', {id: apprenant.id}) }}">✏️ Modifier</a>
<a href="{{ path('admin_apprenant_index') }}">⬅️ Retour</a>
{% endblock %}
