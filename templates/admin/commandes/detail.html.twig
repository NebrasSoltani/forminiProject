{% extends 'base.html.twig' %}

{% block title %}Commande {{ commande.reference }}{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 col-12 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-4">
                            <a href="{{ path('admin_commandes') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour aux commandes
                            </a>
                        </div>

                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h4 class="card-title mb-1">Commande {{ commande.reference }}</h4>
                                <p class="text-muted mb-0">
                                    Passée le {{ commande.dateCommande|date('d/m/Y à H:i') }}
                                </p>
                            </div>
                            <div>
                                {% if commande.statut == 'en_attente' %}
                                    <span class="badge bg-warning fs-6">En attente</span>
                                {% elseif commande.statut == 'confirmee' %}
                                    <span class="badge bg-info fs-6">Confirmée</span>
                                {% elseif commande.statut == 'en_cours' %}
                                    <span class="badge bg-primary fs-6">En cours</span>
                                {% elseif commande.statut == 'livree' %}
                                    <span class="badge bg-success fs-6">Livrée</span>
                                {% else %}
                                    <span class="badge bg-danger fs-6">Annulée</span>
                                {% endif %}
                            </div>
                        </div>

                        <hr>

                        <!-- Modifier le statut -->
                        <div class="card mb-4 bg-light">
                            <div class="card-body">
                                <h6 class="mb-3"><i class="fas fa-edit"></i> Modifier le statut de la commande</h6>
                                <form method="post" action="{{ path('admin_commande_update_statut', {id: commande.id}) }}" class="d-flex gap-2 align-items-center">
                                    <input type="hidden" name="_token" value="{{ csrf_token('update_statut' ~ commande.id) }}">
                                    <select name="statut" class="form-select" style="max-width: 250px;">
                                        <option value="en_attente" {% if commande.statut == 'en_attente' %}selected{% endif %}>En attente</option>
                                        <option value="confirmee" {% if commande.statut == 'confirmee' %}selected{% endif %}>Confirmée</option>
                                        <option value="en_cours" {% if commande.statut == 'en_cours' %}selected{% endif %}>En cours</option>
                                        <option value="livree" {% if commande.statut == 'livree' %}selected{% endif %}>Livrée</option>
                                        <option value="annulee" {% if commande.statut == 'annulee' %}selected{% endif %}>Annulée</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Mettre à jour
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- Informations client -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h6 class="mb-0"><i class="fas fa-user"></i> Informations Client</h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-1"><strong>Nom :</strong> {{ commande.utilisateur.nom }} {{ commande.utilisateur.prenom }}</p>
                                        <p class="mb-1"><strong>Email :</strong> {{ commande.utilisateur.email }}</p>
                                        {% if commande.telephone %}
                                            <p class="mb-1"><strong>Téléphone :</strong> {{ commande.telephone }}</p>
                                        {% endif %}
                                        <p class="mb-1">
                                            <strong>Rôle :</strong> 
                                            <span class="badge bg-info">{{ commande.utilisateur.roleUtilisateur }}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-info text-white">
                                        <h6 class="mb-0"><i class="fas fa-map-marker-alt"></i> Adresse de Livraison</h6>
                                    </div>
                                    <div class="card-body">
                                        {% if commande.adresseLivraison %}
                                            <p class="mb-0">{{ commande.adresseLivraison|nl2br }}</p>
                                        {% else %}
                                            <p class="text-muted mb-0">Non renseignée</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h5 class="mb-3">Détails de la commande</h5>

                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Produit</th>
                                        <th>Prix unitaire</th>
                                        <th>Quantité</th>
                                        <th>Sous-total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in commande.items %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% if item.produit.image %}
                                                    <img src="{{ asset('uploads/produits/' ~ item.produit.image) }}" 
                                                         alt="{{ item.nomProduit }}" 
                                                         class="img-thumbnail me-3" 
                                                         style="width: 60px; height: 60px; object-fit: cover;">
                                                {% else %}
                                                    <div class="bg-light d-flex align-items-center justify-content-center me-3" 
                                                         style="width: 60px; height: 60px;">
                                                        <i class="fas fa-image"></i>
                                                    </div>
                                                {% endif %}
                                                <div>
                                                    <strong>{{ item.nomProduit }}</strong><br>
                                                    <small class="text-muted">{{ item.produit.categorie }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>{{ item.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                                        <td>{{ item.quantite }}</td>
                                        <td><strong>{{ item.getSousTotal()|number_format(2, ',', ' ') }} €</strong></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr class="table-active">
                                        <td colspan="3" class="text-end"><strong>Total :</strong></td>
                                        <td><strong class="text-primary fs-5">{{ commande.calculerTotal()|number_format(2, ',', ' ') }} €</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <hr>

                        <!-- Timeline de la commande -->
                        <div class="mt-4">
                            <h6>Suivi de commande</h6>
                            <div class="timeline">
                                <p class="mb-1">
                                    <i class="fas fa-check-circle text-success"></i>
                                    <strong>Commande passée</strong><br>
                                    <small class="text-muted">{{ commande.dateCommande|date('d/m/Y à H:i') }}</small>
                                </p>
                                {% if commande.statut in ['confirmee', 'en_cours', 'livree'] %}
                                    <p class="mb-1">
                                        <i class="fas fa-check-circle text-success"></i>
                                        <strong>Commande confirmée</strong>
                                    </p>
                                {% endif %}
                                {% if commande.statut in ['en_cours', 'livree'] %}
                                    <p class="mb-1">
                                        <i class="fas fa-check-circle text-success"></i>
                                        <strong>En cours de préparation</strong>
                                    </p>
                                {% endif %}
                                {% if commande.statut == 'livree' %}
                                    <p class="mb-1">
                                        <i class="fas fa-check-circle text-success"></i>
                                        <strong>Livrée</strong>
                                    </p>
                                {% endif %}
                                {% if commande.statut == 'annulee' %}
                                    <p class="mb-1">
                                        <i class="fas fa-times-circle text-danger"></i>
                                        <strong>Commande annulée</strong>
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
