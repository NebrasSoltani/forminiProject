{% extends 'base.html.twig' %}

{% block title %}Commande {{ commande.reference }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">

    <div class="col-lg-10 col-12 mx-auto">

        {# ===== Retour ===== #}
        <div class="mb-4">
            <a href="{{ path('admin_commandes') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Retour aux commandes
            </a>
        </div>

        {# ===== Flash messages ===== #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show shadow-sm mb-4">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card shadow-sm rounded-4">

            <div class="card-body">

                {# ===== Header commande ===== #}
                <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
                    <div>
                        <h4 class="card-title mb-1">Commande {{ commande.reference }}</h4>
                        <p class="text-muted mb-0">Passée le {{ commande.dateCommande|date('d/m/Y à H:i') }}</p>
                    </div>
                    <div>
                        {% set colors = {
                            'en_attente':'warning',
                            'confirmee':'info',
                            'en_cours':'primary',
                            'livree':'success',
                            'annulee':'danger'
                        } %}
                        <span class="badge bg-{{ colors[commande.statut]|default('dark') }} fs-6 rounded-pill px-3">
                            {{ commande.statut|capitalize }}
                        </span>
                    </div>
                </div>

                <hr>

                {# ===== Modifier statut ===== #}
                <div class="card mb-4 bg-light shadow-sm">
                    <div class="card-body">
                        <h6 class="mb-3"><i class="fas fa-edit me-2"></i> Modifier le statut</h6>
                        <form method="post" action="{{ path('admin_commande_update_statut', {id: commande.id}) }}" class="d-flex gap-2 flex-wrap align-items-center">
                            <input type="hidden" name="_token" value="{{ csrf_token('update_statut' ~ commande.id) }}">
                            <select name="statut" class="form-select" style="max-width: 250px;">
                                <option value="en_attente" {% if commande.statut == 'en_attente' %}selected{% endif %}>En attente</option>
                                <option value="confirmee" {% if commande.statut == 'confirmee' %}selected{% endif %}>Confirmée</option>
                                <option value="en_cours" {% if commande.statut == 'en_cours' %}selected{% endif %}>En cours</option>
                                <option value="livree" {% if commande.statut == 'livree' %}selected{% endif %}>Livrée</option>
                                <option value="annulee" {% if commande.statut == 'annulee' %}selected{% endif %}>Annulée</option>
                            </select>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Mettre à jour
                            </button>
                        </form>
                    </div>
                </div>

                {# ===== Infos client & adresse ===== #}
                <div class="row mb-4 g-3">

                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0"><i class="fas fa-user me-1"></i> Informations Client</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-1"><strong>Nom :</strong> {{ commande.utilisateur.nom }} {{ commande.utilisateur.prenom }}</p>
                                <p class="mb-1"><strong>Email :</strong> {{ commande.utilisateur.email }}</p>
                                {% if commande.telephone %}
                                    <p class="mb-1"><strong>Téléphone :</strong> {{ commande.telephone }}</p>
                                {% endif %}
                                <p class="mb-1">
                                    <strong>Rôle :</strong>
                                    <span class="badge bg-info-subtle text-info">{{ commande.utilisateur.roleUtilisateur }}</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0"><i class="fas fa-map-marker-alt me-1"></i> Adresse de Livraison</h6>
                            </div>
                            <div class="card-body">
                                {% if commande.adresseLivraison %}
                                    <p class="mb-0">{{ commande.adresseLivraison|nl2br }}</p>
                                {% else %}
                                    <p class="text-muted mb-0">Non renseignée</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                </div>

                {# ===== Détails de la commande ===== #}
                <h5 class="mb-3">Détails de la commande</h5>
                <div class="table-responsive mb-4">
                    <table class="table table-bordered table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Produit</th>
                                <th>Prix unitaire</th>
                                <th>Quantité</th>
                                <th>Sous-total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in commande.items %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if item.produit.image %}
                                            <img src="{{ asset('uploads/produits/' ~ item.produit.image) }}" 
                                                 alt="{{ item.nomProduit }}" 
                                                 class="img-thumbnail me-3" 
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                        {% else %}
                                            <div class="bg-light d-flex align-items-center justify-content-center me-3" 
                                                 style="width: 60px; height: 60px;">
                                                <i class="fas fa-image"></i>
                                            </div>
                                        {% endif %}
                                        <div>
                                            <strong>{{ item.nomProduit }}</strong><br>
                                            <small class="text-muted">{{ item.produit.categorie }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>{{ item.prixUnitaire|number_format(2, ',', ' ') }} dt</td>
                                <td><span class="badge bg-info-subtle text-info">{{ item.quantite }}</span></td>
                                <td><strong>{{ item.getSousTotal()|number_format(2, ',', ' ') }} dt</strong></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="3" class="text-end"><strong>Total :</strong></td>
                                <td><strong class="text-primary fs-5">{{ commande.calculerTotal()|number_format(2, ',', ' ') }} dt</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                {# ===== Timeline ===== #}
                <div class="mt-4">
                    <h6>Suivi de commande</h6>
                    <div class="timeline ps-2">
                        <p class="mb-1">
                            <i class="fas fa-check-circle text-success me-1"></i>
                            <strong>Commande passée</strong>
                            <br><small class="text-muted">{{ commande.dateCommande|date('d/m/Y à H:i') }}</small>
                        </p>
                        {% if commande.statut in ['confirmee', 'en_cours', 'livree'] %}
                            <p class="mb-1">
                                <i class="fas fa-check-circle text-success me-1"></i> <strong>Commande confirmée</strong>
                            </p>
                        {% endif %}
                        {% if commande.statut in ['en_cours', 'livree'] %}
                            <p class="mb-1">
                                <i class="fas fa-check-circle text-success me-1"></i> <strong>En cours de préparation</strong>
                            </p>
                        {% endif %}
                        {% if commande.statut == 'livree' %}
                            <p class="mb-1">
                                <i class="fas fa-check-circle text-success me-1"></i> <strong>Livrée</strong>
                            </p>
                        {% endif %}
                        {% if commande.statut == 'annulee' %}
                            <p class="mb-1">
                                <i class="fas fa-times-circle text-danger me-1"></i> <strong>Commande annulée</strong>
                            </p>
                        {% endif %}
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

{% endblock %}
