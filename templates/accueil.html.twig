            <span>&#201;v&#233;nements</span>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        {% if evenements is defined and evenements|length > 0 %}
          {% for evenement in evenements %}
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="item border rounded p-4 h-100 event-card" style="background: #fff; box-shadow: 0 5px 15px rgba(0,0,0,0.05); transition: all 0.3s ease; border: 1px solid #f0f0f0;">
                {% if evenement.image %}
                  <img src="{{ asset('uploads/evenements/' ~ evenement.image) }}" alt="{{ evenement.titre }}" class="rounded mb-3 w-100" style="height: 160px; object-fit: cover;">
                {% else %}
                  <div class="rounded mb-3 d-flex align-items-center justify-content-center bg-light" style="height: 160px;">
                    <i class="fa fa-calendar-check-o" style="font-size: 48px; color: #6974e8;"></i>
                  </div>
                {% endif %}
                <div class="icon mb-2"><span class="badge bg-primary">{{ evenement.type }}</span></div>
                <h4 class="mb-2">{{ evenement.titre }}</h4>
                <p class="small text-muted mb-2">{{ evenement.description|length > 100 ? evenement.description|slice(0, 100) ~ '...' : evenement.description }}</p>
                <p class="small mb-2"><i class="fa fa-map-marker text-primary me-1"></i>{{ evenement.lieu }}</p>
                <p class="small mb-3">
                    <i class="fa fa-calendar text-primary me-1"></i>{{ evenement.dateDebut|date('d/m/Y H:i') }} &#8211; {{ evenement.dateFin|date('d/m/Y H:i') }}
                    {% if evenement.nombrePlaces is not null %}
                        <br>
                        <i class="fa fa-users text-primary me-1"></i>
                        {{ evenement.nombrePlaces }} place(s) restante(s)
                    {% endif %}
                </p>
                {% if app.user %}
                  {% if ids_participation[evenement.id] is defined %}
                    <span class="badge bg-success">Vous participez</span>
                  {% else %}
                    <button type="button" 
                            class="main-button" 
                            data-bs-toggle="modal" 
                            data-bs-target="#confirmationModal"
                            data-event-id="{{ evenement.id }}"
                            data-event-title="{{ evenement.titre }}"
                            data-csrf="{{ csrf_token('participer_evenement_' ~ evenement.id) }}">
                      Participer
                    </button>
                  {% endif %}
                {% else %}
                  <div class="main-blue-button-hover"><a href="{{ path('app_login') }}">Connectez-vous pour participer</a></div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        {% else %}
          <div class="col-12 text-center py-4">
            <p class="text-muted">Aucun &#233;v&#233;nement disponible pour le moment.</p>
          </div>
        {% endif %}
      </div>
