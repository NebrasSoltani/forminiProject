{% extends 'base.html.twig' %}

{% block title %}Nouvelle Formation{% endblock %}

{% block body %}

{# Flash messages #}
{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
{% endfor %}

<div class="row">
    <div class="col-12">
        {# Header #}
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h3 class="mb-1">
                            <i class="fa fa-plus-circle text-primary mr-2"></i>
                            Créer une nouvelle formation
                        </h3>
                        <p class="text-muted mb-0">
                            <i class="fa fa-info-circle mr-1"></i>
                            Remplis les informations puis choisis : brouillon, soumettre ou publier
                        </p>
                    </div>
                    <div>
                        <a href="{{ path('formation_index') }}" class="btn btn-secondary">
                            <i class="fa fa-arrow-left mr-1"></i> Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            {# Formulaire principal #}
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                    {# ===== SECTION 1 : Infos ===== #}
                    <div class="section-card mb-4">
                        <div class="section-title">
                            <i class="fa fa-info-circle text-primary mr-2"></i> Informations générales
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.titre) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.categorie) }}
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_row(form.niveau) }}
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_row(form.langue) }}
                            </div>
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.descriptionCourte) }}
                            </div>
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.descriptionDetaillee) }}
                            </div>
                        </div>
                    </div>

                    {# ===== SECTION 2 : Contenu ===== #}
                    <div class="section-card mb-4">
                        <div class="section-title">
                            <i class="fa fa-graduation-cap text-primary mr-2"></i> Contenu pédagogique
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.objectifsPedagogiques) }}
                            </div>
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.prerequis) }}
                            </div>
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.programme) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.duree) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.nombreLecons) }}
                            </div>
                        </div>
                    </div>

                    {# ===== SECTION 3 : Format ===== #}
                    <div class="section-card mb-4">
                        <div class="section-title">
                            <i class="fa fa-video text-primary mr-2"></i> Format de la formation
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.format) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.dateDebut) }}
                            </div>
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.planning) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.lienLive) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.nombreSeances) }}
                            </div>
                        </div>
                    </div>

                    {# ===== SECTION 4 : Prix ===== #}
                    <div class="section-card mb-4">
                        <div class="section-title d-flex align-items-center justify-content-between flex-wrap">
                            <div>
                                <i class="fa fa-coins text-primary mr-2"></i> Prix & Accès
                            </div>
                            <span class="badge badge-light border text-muted mt-2 mt-md-0">
                                Les champs prix apparaissent seulement si "payant"
                            </span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                {{ form_row(form.typeAcces) }}
                            </div>
                            <div class="col-md-4 mb-3 payant-field">
                                {{ form_row(form.prix) }}
                            </div>
                            <div class="col-md-4 mb-3 payant-field">
                                {{ form_row(form.typeAchat) }}
                            </div>
                            <div class="col-md-6 mb-3 payant-field">
                                {{ form_row(form.prixPromo) }}
                            </div>
                            <div class="col-md-6 mb-3 payant-field">
                                {{ form_row(form.dateFinPromo) }}
                            </div>
                        </div>
                    </div>

                    {# ===== SECTION 5 : Médias ===== #}
                    <div class="section-card mb-4">
                        <div class="section-title">
                            <i class="fa fa-photo-video text-primary mr-2"></i> Médias
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.imageCouverture) }}
                                <small class="text-muted d-block mt-1">Image JPG/PNG recommandée.</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.videoPromo) }}
                                <small class="text-muted d-block mt-1">Lien YouTube/Vimeo ou mp4.</small>
                            </div>
                        </div>
                    </div>

                    {# ===== SECTION 6 : Bonus ===== #}
                    <div class="section-card mb-4">
                        <div class="section-title">
                            <i class="fa fa-gift text-primary mr-2"></i> Options bonus
                        </div>

                        <div class="row">
                            <div class="col-md-3 col-6 mb-3">
                                <label class="option-tile">
                                    {{ form_widget(form.certificat) }}
                                    <span><i class="fa fa-certificate mr-1"></i> Certificat</span>
                                </label>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <label class="option-tile">
                                    {{ form_widget(form.hasQuiz) }}
                                    <span><i class="fa fa-tasks mr-1"></i> Quiz</span>
                                </label>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <label class="option-tile">
                                    {{ form_widget(form.fichiersTelechargeables) }}
                                    <span><i class="fa fa-file mr-1"></i> Fichiers</span>
                                </label>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <label class="option-tile">
                                    {{ form_widget(form.forum) }}
                                    <span><i class="fa fa-comments mr-1"></i> Forum</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    {# ===== ACTIONS ===== #}
                    <div class="form-actions mt-4">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <a href="{{ path('formation_index') }}" class="btn btn-secondary btn-lg mb-2 mb-md-0">
                                <i class="fa fa-times mr-1"></i> Annuler
                            </a>

                            <div class="d-flex flex-wrap gap-2">
                                <button type="submit" name="action" value="brouillon"
                                        class="btn btn-action btn-outline-secondary btn-lg mb-2 mb-md-0">
                                    <i class="fa fa-save mr-1"></i> Brouillon
                                </button>

                                <button type="submit" name="action" value="soumettre"
                                        class="btn btn-action btn-warning btn-lg mb-2 mb-md-0">
                                    <i class="fa fa-paper-plane mr-1"></i> Soumettre
                                </button>

                                <button type="submit" name="action" value="publier"
                                        class="btn btn-action btn-success btn-lg mb-2 mb-md-0">
                                    <i class="fa fa-check-circle mr-1"></i> Publier
                                </button>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

