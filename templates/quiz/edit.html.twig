{% extends 'base.html.twig' %}

{% block title %}Modifier Quiz - {{ formation.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>Modifier le quiz : {{ quiz.titre }}</h2>
                    <p class="text-muted mb-0">Formation : {{ formation.titre }}</p>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.titre) }}
                        {{ form_row(form.description) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.duree) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.noteMinimale) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(form.afficherCorrection) }}
                                {{ form_label(form.afficherCorrection) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(form.melanger) }}
                                {{ form_label(form.melanger) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a href="{{ path('quiz_index', {'formationId': formation.id}) }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">ðŸ’¾ Enregistrer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
