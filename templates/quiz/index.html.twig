{% extends 'base.html.twig' %}

{% block title %}Quiz - {{ formation.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Quiz de la formation</h1>
            <p class="text-muted">{{ formation.titre }}</p>
        </div>
        <div>
            <a href="{{ path('formation_show', {'id': formation.id}) }}" class="btn btn-secondary">‚Üê Retour √† la formation</a>
            <a href="{{ path('quiz_new', {'formationId': formation.id}) }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouveau Quiz
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        {% if quizzes is empty %}
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <h5>Aucun quiz pour cette formation</h5>
                    <p>Cr√©ez votre premier quiz pour √©valuer vos apprenants</p>
                </div>
            </div>
        {% else %}
            {% for quiz in quizzes %}
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">{{ quiz.titre }}</h5>
                    </div>
                    <div class="card-body">
                        {% if quiz.description %}
                            <p class="text-muted">{{ quiz.description }}</p>
                        {% endif %}

                        <div class="mb-3">
                            <strong>‚è±Ô∏è Dur√©e :</strong> {{ quiz.duree }} minutes<br>
                            <strong>‚úÖ Note minimale :</strong> {{ quiz.noteMinimale }}%<br>
                            <strong>üìù Questions :</strong> {{ quiz.questions|length }}<br>
                            <strong>üîÄ M√©langer :</strong> {{ quiz.melanger ? 'Oui' : 'Non' }}<br>
                            <strong>üìä Correction :</strong> {{ quiz.afficherCorrection ? 'Affich√©e' : 'Masqu√©e' }}
                        </div>
                    </div>
                    <div class="card-footer d-flex gap-2">
                        <a href="{{ path('quiz_show', {'formationId': formation.id, 'id': quiz.id}) }}" class="btn btn-sm btn-info">
                            üëÅÔ∏è Voir
                        </a>
                        <a href="{{ path('question_index', {'formationId': formation.id, 'quizId': quiz.id}) }}" class="btn btn-sm btn-success">
                            üìù Questions
                        </a>
                        <a href="{{ path('quiz_edit', {'formationId': formation.id, 'id': quiz.id}) }}" class="btn btn-sm btn-warning">
                            ‚úèÔ∏è Modifier
                        </a>
                        <form method="post" action="{{ path('quiz_delete', {'formationId': formation.id, 'id': quiz.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('√ätes-vous s√ªr ?')">üóëÔ∏è</button>
                        </form>
                    </div>
                </div>
            </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}
