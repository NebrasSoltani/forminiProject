{% extends 'base.html.twig' %}

{% block title %}{{ quiz.titre }} - {{ formation.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h2>{{ quiz.titre }}</h2>
                <p class="text-muted mb-0">Formation : {{ formation.titre }}</p>
            </div>
        </div>
        <div class="card-body">
            {% if quiz.description %}
                <div class="mb-4">
                    <h5>üìù Description</h5>
                    <p>{{ quiz.description }}</p>
                </div>
            {% endif %}

            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>‚ÑπÔ∏è Informations</h5>
                    <table class="table">
                        <tr>
                            <th>Dur√©e :</th>
                            <td>‚è±Ô∏è {{ quiz.duree }} minutes</td>
                        </tr>
                        <tr>
                            <th>Note minimale :</th>
                            <td>{{ quiz.noteMinimale }}%</td>
                        </tr>
                        <tr>
                            <th>Nombre de questions :</th>
                            <td>{{ quiz.questions|length }}</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5>‚öôÔ∏è Param√®tres</h5>
                    <table class="table">
                        <tr>
                            <th>M√©langer les questions :</th>
                            <td>{{ quiz.melanger ? '‚úÖ Oui' : '‚ùå Non' }}</td>
                        </tr>
                        <tr>
                            <th>Afficher la correction :</th>
                            <td>{{ quiz.afficherCorrection ? '‚úÖ Oui' : '‚ùå Non' }}</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="mb-4">
                <h5>üìù Questions ({{ quiz.questions|length }})</h5>
                {% if quiz.questions is empty %}
                    <div class="alert alert-warning">
                        Aucune question dans ce quiz. 
                        <a href="{{ path('question_index', {'formationId': formation.id, 'quizId': quiz.id}) }}">Ajouter des questions</a>
                    </div>
                {% else %}
                    <div class="list-group">
                        {% for question in quiz.questions %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">{{ question.ordre }}. {{ question.enonce }}</h6>
                                    <small class="text-muted">
                                        Type: {{ question.type }} | Points: {{ question.points }}
                                    </small>
                                    <div class="mt-2">
                                        {% for reponse in question.reponses %}
                                            <span class="badge {{ reponse.estCorrecte ? 'bg-success' : 'bg-secondary' }} me-1">
                                                {{ reponse.estCorrecte ? '‚úì' : '‚úó' }} {{ reponse.texte }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="d-flex gap-2">
                <a href="{{ path('quiz_index', {'formationId': formation.id}) }}" class="btn btn-secondary">‚Üê Retour aux quiz</a>
                <a href="{{ path('question_index', {'formationId': formation.id, 'quizId': quiz.id}) }}" class="btn btn-success">üìù G√©rer les questions</a>
                <a href="{{ path('quiz_edit', {'formationId': formation.id, 'id': quiz.id}) }}" class="btn btn-warning">‚úèÔ∏è Modifier</a>
                <form method="post" action="{{ path('quiz_delete', {'formationId': formation.id, 'id': quiz.id}) }}" style="display:inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                    <button class="btn btn-danger" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce quiz ?')">
                        üóëÔ∏è Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}