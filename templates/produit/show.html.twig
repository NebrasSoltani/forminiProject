{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 col-12 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 class="card-title mb-0">Détails du Produit</h4>
                            <div class="btn-group" role="group">
                                <a href="{{ path('produit_edit', {id: produit.id}) }}" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a href="{{ path('produit_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour
                                </a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 text-center">
                                {% if produit.image %}
                                    <img src="{{ asset('uploads/produits/' ~ produit.image) }}" 
                                         alt="{{ produit.nom }}" 
                                         class="img-fluid rounded shadow-sm mb-3">
                                {% else %}
                                    <div class="bg-light d-flex align-items-center justify-content-center rounded" 
                                         style="height: 300px;">
                                        <i class="fas fa-image fa-5x text-muted"></i>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="col-md-8">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th style="width: 200px;">Nom :</th>
                                            <td><strong class="fs-5">{{ produit.nom }}</strong></td>
                                        </tr>
                                        <tr>
                                            <th>Catégorie :</th>
                                            <td><span class="badge bg-info fs-6">{{ produit.categorie }}</span></td>
                                        </tr>
                                        <tr>
                                            <th>Description :</th>
                                            <td>{{ produit.description|nl2br }}</td>
                                        </tr>
                                        <tr>
                                            <th>Prix :</th>
                                            <td><strong class="text-primary fs-5">{{ produit.prix|number_format(2, ',', ' ') }} €</strong></td>
                                        </tr>
                                        <tr>
                                            <th>Stock :</th>
                                            <td>
                                                {% if produit.stock > 10 %}
                                                    <span class="badge bg-success fs-6">{{ produit.stock }} unités</span>
                                                {% elseif produit.stock > 0 %}
                                                    <span class="badge bg-warning fs-6">{{ produit.stock }} unités</span>
                                                {% else %}
                                                    <span class="badge bg-danger fs-6">Rupture de stock</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Statut :</th>
                                            <td>
                                                {% if produit.statut == 'actif' %}
                                                    <span class="badge bg-success fs-6">Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary fs-6">Inactif</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Date de création :</th>
                                            <td>{{ produit.dateCreation|date('d/m/Y à H:i') }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end">
                            <form method="post" 
                                  action="{{ path('produit_delete', {id: produit.id}) }}"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ? Cette action est irréversible.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer ce produit
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
