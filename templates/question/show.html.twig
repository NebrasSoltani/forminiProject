{% extends 'base.html.twig' %}

{% block title %}{{ question.enonce }} - {{ quiz.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h2>Question #{{ question.ordre }}</h2>
                <p class="text-muted mb-0">Quiz : {{ quiz.titre }}</p>
            </div>
            <div>
                <span class="badge bg-info">{{ question.type }}</span>
                <span class="badge bg-secondary">{{ question.points }} point(s)</span>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5>üìù √ânonc√©</h5>
                <p class="lead">{{ question.enonce }}</p>
            </div>

            {% if question.explication %}
            <div class="mb-4">
                <h5>üí° Explication</h5>
                <p class="text-muted">{{ question.explication }}</p>
            </div>
            {% endif %}

            <div class="mb-4">
                <h5>‚úÖ R√©ponses ({{ question.reponses|length }})</h5>
                {% if question.reponses is empty %}
                    <div class="alert alert-warning">
                        Aucune r√©ponse d√©finie pour cette question.
                        <a href="{{ path('question_edit', {'formationId': formation.id, 'quizId': quiz.id, 'id': question.id}) }}">Ajouter des r√©ponses</a>
                    </div>
                {% else %}
                    <div class="list-group">
                        {% for reponse in question.reponses %}
                        <div class="list-group-item d-flex align-items-center">
                            <span class="badge {{ reponse.estCorrecte ? 'bg-success' : 'bg-secondary' }} me-3">
                                {{ reponse.estCorrecte ? '‚úì Correcte' : '‚úó Incorrecte' }}
                            </span>
                            <span>{{ reponse.texte }}</span>
                        </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="d-flex gap-2">
                <a href="{{ path('question_index', {'formationId': formation.id, 'quizId': quiz.id}) }}" class="btn btn-secondary">‚Üê Retour aux questions</a>
                <a href="{{ path('question_edit', {'formationId': formation.id, 'quizId': quiz.id, 'id': question.id}) }}" class="btn btn-warning">‚úèÔ∏è Modifier</a>
                <form method="post" action="{{ path('question_delete', {'formationId': formation.id, 'quizId': quiz.id, 'id': question.id}) }}" style="display:inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                    <button class="btn btn-danger" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette question ?')">
                        üóëÔ∏è Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}