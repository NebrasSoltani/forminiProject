{% extends 'base.html.twig' %}

{% block title %}Questions - {{ quiz.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Questions du quiz</h1>
            <p class="text-muted">{{ quiz.titre }} - {{ formation.titre }}</p>
        </div>
        <div>
            <a href="{{ path('quiz_show', {'formationId': formation.id, 'id': quiz.id}) }}" class="btn btn-secondary">‚Üê Retour au quiz</a>
            <a href="{{ path('question_new', {'formationId': formation.id, 'quizId': quiz.id}) }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouvelle Question
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-body">
            {% if questions is empty %}
                <p class="text-center text-muted">Aucune question dans ce quiz</p>
            {% else %}
                <div class="list-group">
                    {% for question in questions %}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h5 class="mb-1">{{ question.ordre }}. {{ question.enonce }}</h5>
                                <p class="mb-1">
                                    <span class="badge bg-info">{{ question.type }}</span>
                                    <span class="badge bg-secondary">{{ question.points }} point(s)</span>
                                </p>
                                {% if question.reponses|length > 0 %}
                                    <div class="mt-2">
                                        <strong>R√©ponses ({{ question.reponses|length }}) :</strong>
                                        <div class="ms-3">
                                            {% for reponse in question.reponses %}
                                                <span class="badge {{ reponse.estCorrecte ? 'bg-success' : 'bg-secondary' }} me-1">
                                                    {{ reponse.estCorrecte ? '‚úì' : '‚úó' }} {{ reponse.texte }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% else %}
                                    <small class="text-warning">‚ö†Ô∏è Aucune r√©ponse d√©finie</small>
                                {% endif %}
                            </div>
                            <div class="d-flex gap-2 align-items-center ms-3">
                                <a href="{{ path('question_show', {'formationId': formation.id, 'quizId': quiz.id, 'id': question.id}) }}" class="btn btn-sm btn-info">üëÅÔ∏è</a>
                                <a href="{{ path('question_edit', {'formationId': formation.id, 'quizId': quiz.id, 'id': question.id}) }}" class="btn btn-sm btn-warning">‚úèÔ∏è</a>
                                <form method="post" action="{{ path('question_delete', {'formationId': formation.id, 'quizId': quiz.id, 'id': question.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                                    <button class="btn btn-sm btn-danger" onclick="return confirm('√ätes-vous s√ªr ?')">üóëÔ∏è</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}