{% extends 'base.html.twig' %}

{% block title %}Boutique - Produits Pédagogiques{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- En-tête moderne avec gradient -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="text-center py-4">
                <h1 class="display-4 fw-bold text-dark mb-3">
                    <i class="bi bi-shop me-3" style="color: #667eea;"></i>Boutique Pédagogique
                </h1>
                <p class="lead text-muted mb-4">Découvrez nos produits éducatifs et outils d'apprentissage</p>
                
                <!-- Boutons Panier et Commandes -->
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="{{ path('boutique_panier') }}" class="btn btn-primary btn-lg rounded-pill px-4 position-relative">
                        <i class="bi bi-cart3 me-2"></i>Mon Panier
                        {% if panier|length > 0 %}
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                {{ panier|length }}
                                <span class="visually-hidden">articles</span>
                            </span>
                        {% endif %}
                    </a>
                    <a href="{{ path('boutique_mes_commandes') }}" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                        <i class="bi bi-box-seam me-2"></i>Mes Commandes
                    </a>
                </div>
            </div>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
                <i class="bi bi-{{ label == 'success' ? 'check-circle-fill' : (label == 'error' ? 'x-circle-fill' : 'info-circle-fill') }} me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        <!-- Section Filtres -->
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0 text-muted">
                    <span class="badge rounded-pill" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">{{ produits|length }}</span>
                    produit(s) disponible(s)
                </h5>
            </div>

            <!-- Filtres Pills modernes -->
            <div class="tera-boutique-filters">
                <a href="{{ path('boutique_index') }}" 
                   class="tera-filter-pill {{ categorieFilter is null ? 'active' : '' }}">
                    <i class="bi bi-grid-3x3-gap-fill me-2"></i>Tous
                </a>
                <a href="{{ path('boutique_index', {categorie: 'livre'}) }}" 
                   class="tera-filter-pill {{ categorieFilter == 'livre' ? 'active' : '' }}">
                    <i class="bi bi-book-fill me-2"></i>Livres
                </a>
                <a href="{{ path('boutique_index', {categorie: 'cahier'}) }}" 
                   class="tera-filter-pill {{ categorieFilter == 'cahier' ? 'active' : '' }}">
                    <i class="bi bi-journal-text me-2"></i>Cahiers
                </a>
                <a href="{{ path('boutique_index', {categorie: 'stylo'}) }}" 
                   class="tera-filter-pill {{ categorieFilter == 'stylo' ? 'active' : '' }}">
                    <i class="bi bi-pen-fill me-2"></i>Stylos
                </a>
                <a href="{{ path('boutique_index', {categorie: 'materiel'}) }}" 
                   class="tera-filter-pill {{ categorieFilter == 'materiel' ? 'active' : '' }}">
                    <i class="bi bi-briefcase-fill me-2"></i>Matériel
                </a>
                <a href="{{ path('boutique_index', {categorie: 'autre'}) }}" 
                   class="tera-filter-pill {{ categorieFilter == 'autre' ? 'active' : '' }}">
                    <i class="bi bi-three-dots me-2"></i>Autre
                </a>
            </div>
        </div>

        <!-- Liste des produits -->
        <div class="col-12">
            {% if produits is empty %}
                <div class="text-center py-5">
                    <div class="tera-empty-state">
                        <i class="bi bi-bag-x display-1 mb-4"></i>
                        <h4 class="mb-3">Aucun produit disponible</h4>
                        <p class="text-muted mb-0">Revenez plus tard pour découvrir nos nouveaux produits</p>
                    </div>
                </div>
            {% else %}
                <div class="row g-4">
                    {% for produit in produits %}
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="card tera-product-card h-100 border-0 overflow-hidden">
                                <!-- HEADER IMAGE -->
                                <div class="tera-product-cover position-relative">
                                    {% if produit.image %}
                                        <img
                                            src="{{ asset('uploads/produits/' ~ produit.image) }}"
                                            class="tera-product-cover-img"
                                            alt="{{ produit.nom }}"
                                        >
                                    {% else %}
                                        <div class="tera-product-cover-img d-flex align-items-center justify-content-center"
                                             style="background:#f2f4f7;">
                                            <i class="bi bi-box-seam" style="font-size:4rem;opacity:.15;"></i>
                                        </div>
                                    {% endif %}

                                    <!-- Category Badge -->
                                    <div class="tera-category-badge">
                                        <i class="bi bi-tag-fill me-1"></i>{{ produit.categorie }}
                                    </div>

                                    <!-- Stock Badge -->
                                    {% if produit.stock <= 0 %}
                                        <div class="tera-stock-badge tera-stock-out">RUPTURE</div>
                                    {% elseif produit.stock < 5 %}
                                        <div class="tera-stock-badge tera-stock-low">{{ produit.stock }} restants</div>
                                    {% endif %}
                                </div>

                                <!-- BODY -->
                                <div class="p-4">
                                    <h5 class="tera-product-title mb-4">
                                        {{ produit.nom }}
                                    </h5>

                                    <!-- FOOTER -->
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="tera-product-price">
                                            <span>{{ produit.prix|number_format(2, ',', ' ') }}</span> <small>€</small>
                                        </div>

                                        <a href="{{ path('boutique_produit_show', {id: produit.id}) }}"
                                           class="btn tera-product-btn">
                                            Voir <i class="bi bi-arrow-right ms-1"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    {% if panier|length > 0 %}
    <!-- Floating Checkout Button -->
    <div class="tera-floating-checkout">
        <a href="{{ path('boutique_panier') }}" class="btn tera-floating-btn shadow-lg">
            <i class="bi bi-cart3"></i> 
            Voir le panier ({{ panier|length }}) 
            <i class="bi bi-arrow-right ms-2"></i>
        </a>
    </div>
    {% endif %}
</div>

