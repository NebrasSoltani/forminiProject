{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- BREADCRUMB -->
        <div class="tera-breadcrumb mb-4">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="{{ path('accueil') }}">
                                <i class="bi bi-house-door me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('boutique_index') }}">
                                <i class="bi bi-shop me-1"></i>Boutique
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Mon Panier</li>
                    </ol>
                </nav>
            </div>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show mx-auto" style="max-width: 1200px;" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-lg-11 col-xl-10 mx-auto">
                <!-- HEADER -->
                <div class="tera-page-header mb-4">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="tera-header-icon">
                                <i class="bi bi-cart3"></i>
                            </div>
                            <div>
                                <h1 class="tera-page-title mb-1">Mon Panier</h1>
                                <p class="tera-page-subtitle mb-0">
                                    {% if panier|length > 0 %}
                                        {{ panier|length }} {% if panier|length > 1 %}articles{% else %}article{% endif %}
                                    {% else %}
                                        Aucun article
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                        <a href="{{ path('boutique_index') }}" class="tera-back-btn">
                            <i class="bi bi-arrow-left me-2"></i>Continuer mes achats
                        </a>
                    </div>
                </div>

                {% if panier|length > 0 %}
                    <div class="row g-4">
                        <!-- LEFT: CART ITEMS -->
                        <div class="col-lg-8">
                            <div class="tera-cart-items">
                                {% set total = 0 %}
                                {% for item in panier %}
                                    {% set sousTotal = item.produit.prix * item.quantite %}
                                    {% set total = total + sousTotal %}
                                    
                                    <div class="tera-cart-item">
                                        <div class="row g-3 align-items-center">
                                            <!-- Image -->
                                            <div class="col-auto">
                                                <div class="tera-cart-item-image">
                                                    {% if item.produit.image %}
                                                        <img src="{{ asset('uploads/produits/' ~ item.produit.image) }}" 
                                                             alt="{{ item.produit.nom }}">
                                                    {% else %}
                                                        <div class="tera-cart-item-placeholder">
                                                            <i class="bi bi-image"></i>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>

                                            <!-- Details -->
                                            <div class="col">
                                                <div class="row g-3 align-items-center">
                                                    <div class="col-md-5">
                                                        <h5 class="tera-cart-item-name mb-2">{{ item.produit.nom }}</h5>
                                                        <span class="tera-cart-item-category">
                                                            <i class="bi bi-tag me-1"></i>{{ item.produit.categorie }}
                                                        </span>
                                                    </div>
                                                    
                                                    <div class="col-md-2 text-center">
                                                        <div class="tera-cart-item-price">
                                                            {{ item.produit.prix|number_format(2, ',', ' ') }}<span class="text-muted"> Dt</span>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-3">
                                                        <form method="post" 
                                                              action="{{ path('boutique_panier_ajouter', {id: item.produit.id}) }}">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('add_to_cart' ~ item.produit.id) }}">
                                                            <div class="tera-quantity-control">
                                                                <label class="tera-quantity-label">Quantité</label>
                                                                <input type="number" 
                                                                       name="quantite" 
                                                                       value="{{ item.quantite }}" 
                                                                       min="1" 
                                                                       max="{{ item.produit.stock }}"
                                                                       class="tera-quantity-input-cart"
                                                                       onchange="this.form.submit()">
                                                            </div>
                                                        </form>
                                                    </div>
                                                    
                                                    <div class="col-md-2 text-end">
                                                        <div class="tera-cart-item-total mb-2">
                                                            {{ sousTotal|number_format(2, ',', ' ') }} Dt
                                                        </div>
                                                        <a href="{{ path('boutique_panier_retirer', {id: item.produit.id}) }}" 
                                                           class="tera-remove-btn"
                                                           onclick="return confirm('Retirer ce produit du panier ?');">
                                                            <i class="bi bi-trash me-1"></i>Retirer
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- RIGHT: SUMMARY -->
                        <div class="col-lg-4">
                            <div class="tera-cart-summary">
                                <h3 class="tera-summary-title mb-4">
                                    <i class="bi bi-receipt me-2"></i>Récapitulatif
                                </h3>

                                <div class="tera-summary-details mb-4">
                                    <div class="tera-summary-row">
                                        <span>Sous-total</span>
                                        <span>{{ total|number_format(2, ',', ' ') }} Dt</span>
                                    </div>
                                    <div class="tera-summary-row">
                                        <span>Livraison</span>
                                        <span class="text-success fw-bold">Gratuite</span>
                                    </div>
                                    <hr class="tera-summary-divider">
                                    <div class="tera-summary-row tera-summary-total">
                                        <span>Total</span>
                                        <span>{{ total|number_format(2, ',', ' ') }} Dt</span>
                                    </div>
                                </div>

                                <div class="tera-summary-info mb-4">
                                    <i class="bi bi-truck me-2"></i>
                                    <div>
                                        <strong>Livraison rapide</strong>
                                        <p class="mb-0">Livraison sous 3 à 5 jours ouvrés</p>
                                    </div>
                                </div>

                                <div class="tera-summary-info mb-4">
                                    <i class="bi bi-shield-check me-2"></i>
                                    <div>
                                        <strong>Paiement sécurisé</strong>
                                        <p class="mb-0">Vos données sont protégées</p>
                                    </div>
                                </div>

                                <form method="post" action="{{ path('payment_cart_checkout') }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('place_order') }}">
                                    <button type="submit" 
                                            class="tera-checkout-btn w-100"
                                            onclick="return confirm('Confirmer votre commande ?');">
                                        <i class="bi bi-check-circle me-2"></i>Valider la commande
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="tera-empty-cart">
                        <div class="tera-empty-icon">
                            <i class="bi bi-cart-x"></i>
                        </div>
                        <h3 class="tera-empty-title">Votre panier est vide</h3>
                        <p class="tera-empty-text mb-4">Découvrez nos produits et ajoutez-les à votre panier</p>
                        <a href="{{ path('boutique_index') }}" class="tera-shop-btn">
                            <i class="bi bi-shop me-2"></i>Découvrir nos produits
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
/* BREADCRUMB */
.tera-breadcrumb {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px 0;
    border-radius: 0 0 20px 20px;
    box-shadow: 0 8px 25px rgba(102, 126, 234, .2);
}

.tera-breadcrumb .breadcrumb {
    background: transparent;
    padding: 0;
}

.tera-breadcrumb .breadcrumb-item a {
    color: rgba(255, 255, 255, .9);
    text-decoration: none;
    font-weight: 600;
    transition: all .3s ease;
}

.tera-breadcrumb .breadcrumb-item a:hover {
    color: #fff;
    transform: translateX(2px);
}

.tera-breadcrumb .breadcrumb-item.active {
    color: #fff;
    font-weight: 700;
}

.tera-breadcrumb .breadcrumb-item + .breadcrumb-item::before {
    color: rgba(255, 255, 255, .7);
}

/* PAGE HEADER */
.tera-page-header {
    background: #fff;
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(15, 23, 42, .08);
}

.tera-header-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 32px;
    box-shadow: 0 8px 20px rgba(102, 126, 234, .3);
}

.tera-page-title {
    font-size: 32px;
    font-weight: 900;
    color: #0f172a;
    margin: 0;
}

.tera-page-subtitle {
    color: #64748b;
    font-size: 15px;
    font-weight: 600;
}

.tera-back-btn {
    background: #f8fafc;
    color: #64748b;
    padding: 12px 24px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 14px;
    text-decoration: none;
    border: 2px solid #e2e8f0;
    transition: all .3s ease;
    display: inline-flex;
    align-items: center;
}

.tera-back-btn:hover {
    background: #667eea;
    color: #fff;
    border-color: #667eea;
    transform: translateX(-3px);
}

/* CART ITEMS */
.tera-cart-items {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.tera-cart-item {
    background: #fff;
    padding: 24px;
    border-radius: 18px;
    box-shadow: 0 8px 20px rgba(15, 23, 42, .06);
    transition: all .3s ease;
    border: 2px solid transparent;
}

.tera-cart-item:hover {
    box-shadow: 0 12px 30px rgba(15, 23, 42, .1);
    border-color: #e2e8f0;
}

.tera-cart-item-image {
    width: 100px;
    height: 100px;
    border-radius: 14px;
    overflow: hidden;
    background: #f8fafc;
}

.tera-cart-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.tera-cart-item-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    color: #94a3b8;
    font-size: 32px;
}

.tera-cart-item-name {
    font-size: 18px;
    font-weight: 800;
    color: #0f172a;
    margin: 0;
    line-height: 1.3;
}

.tera-cart-item-category {
    display: inline-flex;
    align-items: center;
    background: #f8fafc;
    color: #667eea;
    padding: 6px 14px;
    border-radius: 999px;
    font-size: 12px;
    font-weight: 700;
}

.tera-cart-item-price {
    font-size: 20px;
    font-weight: 800;
    color: #0f172a;
}

.tera-quantity-control {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.tera-quantity-label {
    font-size: 11px;
    font-weight: 700;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0;
}

.tera-quantity-input-cart {
    width: 100%;
    padding: 12px;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 800;
    text-align: center;
    color: #0f172a;
    background: #fff;
    transition: all .3s ease;
}

.tera-quantity-input-cart:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, .1);
}

.tera-cart-item-total {
    font-size: 22px;
    font-weight: 900;
    color: #0f172a;
}

.tera-remove-btn {
    color: #ef4444;
    font-size: 13px;
    font-weight: 700;
    text-decoration: none;
    transition: all .3s ease;
    display: inline-flex;
    align-items: center;
}

.tera-remove-btn:hover {
    color: #dc2626;
    transform: translateX(-2px);
}

/* CART SUMMARY */
.tera-cart-summary {
    background: #fff;
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 12px 35px rgba(15, 23, 42, .1);
    position: sticky;
    top: 20px;
}

.tera-summary-title {
    font-size: 22px;
    font-weight: 900;
    color: #0f172a;
    margin: 0;
    display: flex;
    align-items: center;
}

.tera-summary-details {
    background: #f8fafc;
    padding: 20px;
    border-radius: 14px;
}

.tera-summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    font-size: 15px;
    color: #475569;
    font-weight: 600;
}

.tera-summary-row:last-child {
    margin-bottom: 0;
}

.tera-summary-divider {
    border: 0;
    border-top: 2px dashed #e2e8f0;
    margin: 16px 0;
}

.tera-summary-total {
    font-size: 24px;
    font-weight: 900;
    color: #0f172a;
}

.tera-summary-info {
    display: flex;
    gap: 14px;
    background: #f8fafc;
    padding: 16px;
    border-radius: 12px;
    border-left: 4px solid #667eea;
}

.tera-summary-info i {
    font-size: 24px;
    color: #667eea;
    flex-shrink: 0;
}

.tera-summary-info strong {
    font-size: 14px;
    font-weight: 800;
    color: #0f172a;
    display: block;
    margin-bottom: 4px;
}

.tera-summary-info p {
    font-size: 13px;
    color: #64748b;
    line-height: 1.4;
}

.tera-checkout-btn {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: #fff;
    border: 0;
    border-radius: 16px;
    padding: 20px 32px;
    font-weight: 900;
    font-size: 17px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 12px 30px rgba(16, 185, 129, .35);
    transition: all .3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.tera-checkout-btn::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #059669 0%, #047857 100%);
    opacity: 0;
    transition: opacity .3s ease;
}

.tera-checkout-btn:hover::before {
    opacity: 1;
}

.tera-checkout-btn span,
.tera-checkout-btn i {
    position: relative;
    z-index: 1;
}

.tera-checkout-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 18px 40px rgba(16, 185, 129, .45);
}

/* EMPTY CART */
.tera-empty-cart {
    background: #fff;
    padding: 80px 40px;
    border-radius: 24px;
    box-shadow: 0 12px 35px rgba(15, 23, 42, .08);
    text-align: center;
}

.tera-empty-icon {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 30px;
    font-size: 60px;
    color: #94a3b8;
}

.tera-empty-title {
    font-size: 28px;
    font-weight: 900;
    color: #0f172a;
    margin-bottom: 12px;
}

.tera-empty-text {
    font-size: 16px;
    color: #64748b;
    font-weight: 600;
}

.tera-shop-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    padding: 16px 40px;
    border-radius: 999px;
    font-weight: 800;
    font-size: 16px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    box-shadow: 0 12px 30px rgba(102, 126, 234, .35);
    transition: all .3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tera-shop-btn:hover {
    color: #fff;
    transform: translateY(-3px);
    box-shadow: 0 18px 40px rgba(102, 126, 234, .45);
}

/* RESPONSIVE */
@media (max-width: 991px) {
    .tera-cart-summary {
        position: static;
        margin-top: 30px;
    }
}

@media (max-width: 768px) {
    .tera-page-header {
        padding: 20px;
    }
    
    .tera-header-icon {
        width: 60px;
        height: 60px;
        font-size: 28px;
    }
    
    .tera-page-title {
        font-size: 24px;
    }
    
    .tera-cart-item {
        padding: 16px;
    }
    
    .tera-cart-item-image {
        width: 80px;
        height: 80px;
    }
    
    .tera-cart-item .row > .col {
        width: 100%;
    }
    
    .tera-cart-item .row .col-md-2,
    .tera-cart-item .row .col-md-3,
    .tera-cart-item .row .col-md-5 {
        text-align: left !important;
    }
    
    .tera-empty-cart {
        padding: 60px 24px;
    }
    
    .tera-empty-icon {
        width: 100px;
        height: 100px;
        font-size: 50px;
    }
}
</style>
{% endblock %}
