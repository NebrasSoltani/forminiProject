{% extends 'base.html.twig' %}

{% block title %}Dashboard Société{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="fas fa-building"></i> Dashboard Société</h2>
                    <a href="{{ path('societe_offre_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouvelle Offre
                    </a>
                </div>
            </div>
        </div>

        {# Statistiques principales #}
        <div class="row">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card bg-primary text-white shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="text-uppercase mb-1" style="font-size: 0.85rem;">Total Offres</div>
                                <div class="h2 mb-0">{{ totalOffres }}</div>
                            </div>
                            <div>
                                <i class="fas fa-briefcase fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card bg-success text-white shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="text-uppercase mb-1" style="font-size: 0.85rem;">Offres Publiées</div>
                                <div class="h2 mb-0">{{ offresPubliees }}</div>
                            </div>
                            <div>
                                <i class="fas fa-check-circle fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card bg-info text-white shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="text-uppercase mb-1" style="font-size: 0.85rem;">Candidatures</div>
                                <div class="h2 mb-0">{{ totalCandidatures }}</div>
                            </div>
                            <div>
                                <i class="fas fa-users fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card bg-warning text-white shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="text-uppercase mb-1" style="font-size: 0.85rem;">En Attente</div>
                                <div class="h2 mb-0">{{ candidaturesEnAttente }}</div>
                            </div>
                            <div>
                                <i class="fas fa-clock fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Statistiques candidatures #}
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Statistiques des Candidatures</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                    <h4 class="mb-0">{{ candidaturesEnAttente }}</h4>
                                    <small class="text-muted">En attente</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                    <h4 class="mb-0">{{ candidaturesAcceptees }}</h4>
                                    <small class="text-muted">Acceptées</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="fas fa-times-circle fa-2x text-danger mb-2"></i>
                                    <h4 class="mb-0">{{ candidaturesRefusees }}</h4>
                                    <small class="text-muted">Refusées</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Statistiques des Offres</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="fas fa-globe fa-2x text-success mb-2"></i>
                                    <h4 class="mb-0">{{ offresPubliees }}</h4>
                                    <small class="text-muted">Publiées</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="fas fa-lock fa-2x text-secondary mb-2"></i>
                                    <h4 class="mb-0">{{ offresFermees }}</h4>
                                    <small class="text-muted">Fermées</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="fas fa-exclamation-triangle fa-2x text-danger mb-2"></i>
                                    <h4 class="mb-0">{{ offresExpirees }}</h4>
                                    <small class="text-muted">Expirées</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Dernières candidatures reçues #}
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-history"></i> Dernières Candidatures Reçues</h5>
                        <a href="{{ path('societe_offres_index') }}" class="btn btn-sm btn-primary">Voir toutes les offres</a>
                    </div>
                    <div class="card-body">
                        {% if dernieresCandidatures is empty %}
                            <div class="alert alert-info mb-0">
                                <i class="fas fa-info-circle"></i> Aucune candidature reçue pour le moment
                            </div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Candidat</th>
                                            <th>Offre</th>
                                            <th>Date</th>
                                            <th>Statut</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for candidature in dernieresCandidatures %}
                                        <tr>
                                            <td>
                                                <strong>{{ candidature.apprenant.nom }} {{ candidature.apprenant.prenom }}</strong><br>
                                                <small class="text-muted">{{ candidature.apprenant.email }}</small>
                                            </td>
                                            <td>
                                                <strong>{{ candidature.offreStage.titre }}</strong><br>
                                                <small class="text-muted">{{ candidature.offreStage.entreprise }}</small>
                                            </td>
                                            <td>{{ candidature.dateCandidature|date('d/m/Y H:i') }}</td>
                                            <td>
                                                {% if candidature.statut == 'en_attente' %}
                                                    <span class="badge bg-warning text-dark">En attente</span>
                                                {% elseif candidature.statut == 'acceptee' %}
                                                    <span class="badge bg-success">Acceptée</span>
                                                {% else %}
                                                    <span class="badge bg-danger">Refusée</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('societe_offre_show', {id: candidature.offreStage.id}) }}" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> Voir
                                                </a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Mes offres actives #}
        {% if offresPubliees > 0 %}
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-briefcase"></i> Mes Offres Actives</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {% for offre in offres %}
                                {% if offre.statut == 'publiee' %}
                                <div class="col-md-4 mb-3">
                                    <div class="card border-primary h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">{{ offre.titre }}</h6>
                                            <p class="text-muted mb-2"><small>{{ offre.entreprise }}</small></p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge bg-info">{{ offre.candidatures|length }} candidature(s)</span>
                                                <a href="{{ path('societe_offre_show', {id: offre.id}) }}" class="btn btn-sm btn-primary">
                                                    Gérer <i class="fas fa-arrow-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

    </div>
</div>
{% endblock %}
