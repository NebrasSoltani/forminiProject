{% extends 'base.html.twig' %}

{% block title %}{{ offre.titre }}{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h3 class="card-title"><i class="fas fa-briefcase"></i> {{ offre.titre }}</h3>
                                <p class="text-muted">{{ offre.entreprise }} - {{ offre.lieu }}</p>
                            </div>
                            <div>
                                {% if offre.statut == 'publiee' %}
                                    <span class="badge bg-success fs-6">Publiée</span>
                                {% elseif offre.statut == 'fermee' %}
                                    <span class="badge bg-secondary fs-6">Fermée</span>
                                {% else %}
                                    <span class="badge bg-danger fs-6">Expirée</span>
                                {% endif %}
                            </div>
                        </div>

                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="bg-light p-3 rounded">
                                    <h6><i class="fas fa-info-circle"></i> Informations générales</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><strong>Type:</strong> <span class="badge bg-info">{{ offre.typeStage|replace({'_': ' '})|title }}</span></li>
                                        {% if offre.domaine %}
                                            <li><strong>Domaine:</strong> {{ offre.domaine }}</li>
                                        {% endif %}
                                        <li><strong>Durée:</strong> {{ offre.duree }}</li>
                                        <li><strong>Période:</strong> {{ offre.dateDebut|date('d/m/Y') }} - {{ offre.dateFin|date('d/m/Y') }}</li>
                                        <li><strong>Rémunération:</strong> {{ offre.remuneration ?: 'Non spécifiée' }}</li>
                                        <li><strong>Date publication:</strong> {{ offre.datePublication|date('d/m/Y') }}</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="bg-light p-3 rounded mb-3">
                                    <h6><i class="fas fa-user-tie"></i> Profil recherché</h6>
                                    {% if offre.profilDemande %}
                                        <p class="mb-2">{{ offre.profilDemande }}</p>
                                    {% endif %}
                                    <h6 class="mt-3"><i class="fas fa-check-circle"></i> Compétences requises</h6>
                                    <p class="mb-0">{{ offre.competencesRequises|nl2br }}</p>
                                </div>
                                {% if offre.contactEmail or offre.contactTel %}
                                <div class="bg-light p-3 rounded">
                                    <h6><i class="fas fa-address-book"></i> Contact</h6>
                                    {% if offre.contactEmail %}
                                        <p class="mb-1"><strong>Email:</strong> {{ offre.contactEmail }}</p>
                                    {% endif %}
                                    {% if offre.contactTel %}
                                        <p class="mb-0"><strong>Tél:</strong> {{ offre.contactTel }}</p>
                                    {% endif %}
                                </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5><i class="fas fa-file-alt"></i> Description</h5>
                            <p class="text-justify">{{ offre.description|nl2br }}</p>
                        </div>

                        <div class="mb-4">
                            <h5><i class="fas fa-users"></i> Candidatures ({{ offre.candidatures|length }})</h5>
                            
                            {% if offre.candidatures is empty %}
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> Aucune candidature reçue pour le moment
                                </div>
                            {% else %}
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Apprenant</th>
                                                <th>Date candidature</th>
                                                <th>Statut</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for candidature in offre.candidatures %}
                                            <tr>
                                                <td>
                                                    <strong>{{ candidature.apprenant.nom }} {{ candidature.apprenant.prenom }}</strong><br>
                                                    <small class="text-muted">{{ candidature.apprenant.email }}</small>
                                                </td>
                                                <td>{{ candidature.dateCandidature|date('d/m/Y H:i') }}</td>
                                                <td>
                                                    {% if candidature.statut == 'en_attente' %}
                                                        <span class="badge bg-warning">En attente</span>
                                                    {% elseif candidature.statut == 'acceptee' %}
                                                        <span class="badge bg-success">Acceptée</span>
                                                    {% else %}
                                                        <span class="badge bg-danger">Refusée</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#candidatureModal{{ candidature.id }}">
                                                        <i class="fas fa-eye"></i> Détails
                                                    </button>
                                                    
                                                    {% if candidature.statut == 'en_attente' %}
                                                        <form method="post" action="{{ path('societe_candidature_update_statut', {id: candidature.id}) }}" style="display:inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('update_statut' ~ candidature.id) }}">
                                                            <input type="hidden" name="statut" value="acceptee">
                                                            <button type="submit" class="btn btn-sm btn-success">
                                                                <i class="fas fa-check"></i> Accepter
                                                            </button>
                                                        </form>
                                                        <form method="post" action="{{ path('societe_candidature_update_statut', {id: candidature.id}) }}" style="display:inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('update_statut' ~ candidature.id) }}">
                                                            <input type="hidden" name="statut" value="refusee">
                                                            <button type="submit" class="btn btn-sm btn-danger">
                                                                <i class="fas fa-times"></i> Refuser
                                                            </button>
                                                        </form>
                                                    {% endif %}
                                                </td>
                                            </tr>

                                            {# Modal for candidature details #}
                                            <div class="modal fade" id="candidatureModal{{ candidature.id }}" tabindex="-1" aria-labelledby="candidatureModalLabel{{ candidature.id }}" aria-hidden="true">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="candidatureModalLabel{{ candidature.id }}">Candidature de {{ candidature.apprenant.nom }} {{ candidature.apprenant.prenom }}</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h6><i class="fas fa-user"></i> Informations du candidat</h6>
                                                            <div class="bg-light p-3 rounded mb-3">
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <p class="mb-2"><strong>Nom complet:</strong> {{ candidature.apprenant.nom }} {{ candidature.apprenant.prenom }}</p>
                                                                        <p class="mb-2"><strong>Email:</strong> {{ candidature.apprenant.email }}</p>
                                                                        <p class="mb-0"><strong>Téléphone:</strong> {{ candidature.apprenant.telephone }}</p>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        {% if candidature.apprenant.profession %}
                                                                            <p class="mb-2"><strong>Profession:</strong> {{ candidature.apprenant.profession }}</p>
                                                                        {% endif %}
                                                                        {% if candidature.apprenant.niveauEtude %}
                                                                            <p class="mb-2"><strong>Niveau d'études:</strong> {{ candidature.apprenant.niveauEtude|replace({'_': ' '})|title }}</p>
                                                                        {% endif %}
                                                                        {% if candidature.apprenant.governorat %}
                                                                            <p class="mb-0"><strong>Localisation:</strong> {{ candidature.apprenant.governorat }}</p>
                                                                        {% endif %}
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <h6><i class="fas fa-envelope"></i> Lettre de motivation</h6>
                                                            <p class="bg-light p-3 rounded">{{ candidature.lettreMotivation|nl2br }}</p>
                                                            
                                                            {% if candidature.cv %}
                                                                <h6><i class="fas fa-file-pdf"></i> CV</h6>
                                                                <a href="{{ asset('uploads/cv/' ~ candidature.cv) }}" target="_blank" class="btn btn-primary mb-3">
                                                                    <i class="fas fa-download"></i> Télécharger le CV
                                                                </a>
                                                            {% endif %}
                                                            
                                                            {% if candidature.commentaire %}
                                                                <h6 class="mt-3"><i class="fas fa-comment"></i> Votre commentaire</h6>
                                                                <p class="bg-light p-3 rounded">{{ candidature.commentaire|nl2br }}</p>
                                                            {% endif %}
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('societe_offres_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <a href="{{ path('societe_offre_edit', {id: offre.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
