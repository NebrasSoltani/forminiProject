{% extends 'base.html.twig' %}

{% block title %}Mes Offres de Stage{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="tera-page-header mb-4">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">
            <div>
                <div class="tera-title-wrap">
                    <div class="tera-title-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <div>
                        <h2 class="mb-1 tera-page-title">Mes Offres de Stage</h2>
                        <p class="mb-0 tera-page-subtitle">Gérez, filtrez et suivez vos offres et candidatures.</p>
                    </div>
                </div>
            </div>

            <a href="{{ path('societe_offre_new') }}" class="btn btn-primary tera-btn-primary">
                <i class="fas fa-plus me-2"></i> Nouvelle Offre
            </a>
        </div>
    </div>

    <!-- Flash messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show tera-alert" role="alert">
                <div class="d-flex gap-2 align-items-start">
                    <div class="tera-alert-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="flex-grow-1">
                        {{ message }}
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row g-4">
        <!-- Filters -->
        <div class="col-12">
            <div class="card tera-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
                        <h5 class="mb-0 tera-section-title">
                            <i class="fas fa-filter me-2"></i> Filtres
                        </h5>

                        <div class="tera-hint">
                            <i class="fas fa-lightbulb me-2"></i>
                            Astuce : combine titre + lieu pour un résultat rapide
                        </div>
                    </div>

                    <form method="get" action="{{ path('societe_offres_index') }}">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label tera-label">Titre</label>
                                <div class="input-group tera-input">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    <input type="text" name="titre" value="{{ filters.titre|default('') }}"
                                           class="form-control" placeholder="Rechercher par titre...">
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label class="form-label tera-label">Type</label>
                                <select name="typeStage" class="form-select tera-select">
                                    <option value="" {% if filters.typeStage|default('') == '' %}selected{% endif %}>Tous</option>
                                    <option value="stage_observation" {% if filters.typeStage|default('') == 'stage_observation' %}selected{% endif %}>Stage observation</option>
                                    <option value="stage_application" {% if filters.typeStage|default('') == 'stage_application' %}selected{% endif %}>Stage application</option>
                                    <option value="stage_perfectionnement" {% if filters.typeStage|default('') == 'stage_perfectionnement' %}selected{% endif %}>Stage perfectionnement</option>
                                    <option value="pfe" {% if filters.typeStage|default('') == 'pfe' %}selected{% endif %}>PFE</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label class="form-label tera-label">Statut</label>
                                <select name="statut" class="form-select tera-select">
                                    <option value="" {% if filters.statut|default('') == '' %}selected{% endif %}>Tous</option>
                                    <option value="publiee" {% if filters.statut|default('') == 'publiee' %}selected{% endif %}>Publiée</option>
                                    <option value="fermee" {% if filters.statut|default('') == 'fermee' %}selected{% endif %}>Fermée</option>
                                    <option value="expiree" {% if filters.statut|default('') == 'expiree' %}selected{% endif %}>Expirée</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label class="form-label tera-label">Domaine</label>
                                <input type="text" name="domaine" value="{{ filters.domaine|default('') }}"
                                       class="form-control tera-field" placeholder="Ex: IT">
                            </div>

                            <div class="col-md-2">
                                <label class="form-label tera-label">Lieu</label>
                                <input type="text" name="lieu" value="{{ filters.lieu|default('') }}"
                                       class="form-control tera-field" placeholder="Ex: Tunis">
                            </div>

                            <div class="col-md-2">
                                <label class="form-label tera-label">/page</label>
                                <select name="limit" class="form-select tera-select">
                                    <option value="5" {% if limit|default(10) == 5 %}selected{% endif %}>5</option>
                                    <option value="10" {% if limit|default(10) == 10 %}selected{% endif %}>10</option>
                                    <option value="20" {% if limit|default(10) == 20 %}selected{% endif %}>20</option>
                                </select>
                            </div>

                            <div class="col-12 d-flex flex-wrap gap-2 mt-2">
                                <button type="submit" class="btn btn-outline-primary tera-btn-outline">
                                    <i class="fas fa-filter me-2"></i> Filtrer
                                </button>
                                <a href="{{ path('societe_offres_index') }}" class="btn btn-outline-secondary tera-btn-outline">
                                    <i class="fas fa-rotate-left me-2"></i> Réinitialiser
                                </a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

        <!-- Table -->
        <div class="col-12">
            <div class="card tera-card">
                <div class="card-body p-0">
                    <div class="tera-table-head px-4 py-3">
                        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                            <div class="tera-count">
                                <span class="tera-dot"></span>
                                {{ offres|length }} offre(s) affichée(s)
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle tera-table mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4">Offre</th>
                                    <th>Type</th>
                                    <th>Durée</th>
                                    <th>Publication</th>
                                    <th>Candidatures</th>
                                    <th>Statut</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                {% for offre in offres %}
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-semibold">{{ offre.titre }}</div>
                                            <div class="tera-muted small">
                                                {{ offre.domaine|default('Domaine non précisé') }} • {{ offre.lieu|default('Lieu non précisé') }}
                                            </div>
                                        </td>

                                        <td>
                                            <span class="badge tera-badge tera-badge-info">
                                                {{ offre.typeStage|replace({'_': ' '})|title }}
                                            </span>
                                        </td>

                                        <td>{{ offre.duree }}</td>

                                        <td>
                                            <div class="fw-semibold">{{ offre.datePublication|date('d/m/Y') }}</div>
                                            <div class="tera-muted small">{{ offre.datePublication|date('H:i') }}</div>
                                        </td>

                                        <td>
                                            <span class="badge tera-badge tera-badge-primary">
                                                <i class="fas fa-users me-1"></i> {{ offre.candidatures|length }}
                                            </span>
                                        </td>

                                        <td>
                                            {% if offre.statut == 'publiee' %}
                                                <span class="badge tera-badge tera-badge-success">Publiée</span>
                                            {% elseif offre.statut == 'fermee' %}
                                                <span class="badge tera-badge tera-badge-secondary">Fermée</span>
                                            {% else %}
                                                <span class="badge tera-badge tera-badge-danger">Expirée</span>
                                            {% endif %}
                                        </td>

                                        <td class="text-end pe-4">
                                            <div class="btn-group tera-actions" role="group">
                                                <a href="{{ path('societe_offre_show', {id: offre.id}) }}"
                                                   class="btn btn-sm btn-light" data-bs-toggle="tooltip" title="Voir">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('societe_offre_edit', {id: offre.id}) }}"
                                                   class="btn btn-sm btn-light" data-bs-toggle="tooltip" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post"
                                                      action="{{ path('societe_offre_delete', {id: offre.id}) }}"
                                                      class="d-inline"
                                                      onsubmit="return confirm('Confirmer la suppression ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-light text-danger" data-bs-toggle="tooltip" title="Supprimer">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center py-5">
                                            <div class="tera-empty">
                                                <div class="tera-empty-icon">
                                                    <i class="fas fa-briefcase"></i>
                                                </div>
                                                <h5 class="mb-2">Aucune offre de stage</h5>
                                                <p class="text-muted mb-3">Publiez votre première offre pour recevoir des candidatures.</p>
                                                <a href="{{ path('societe_offre_new') }}" class="btn btn-primary tera-btn-primary">
                                                    <i class="fas fa-plus me-2"></i> Publier une offre
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% if pages|default(1) > 1 %}
                        {% set baseParams = {
                            titre: filters.titre|default(''),
                            typeStage: filters.typeStage|default(''),
                            statut: filters.statut|default(''),
                            domaine: filters.domaine|default(''),
                            lieu: filters.lieu|default(''),
                            limit: limit|default(10)
                        } %}

                        <div class="px-4 py-3">
                            <nav aria-label="Pagination">
                                <ul class="pagination justify-content-center mb-0 tera-pagination">
                                    <li class="page-item {% if page|default(1) <= 1 %}disabled{% endif %}">
                                        <a class="page-link"
                                           href="{{ path('societe_offres_index', baseParams|merge({page: (page|default(1) - 1)})) }}">
                                            <i class="fas fa-chevron-left me-2"></i> Précédent
                                        </a>
                                    </li>

                                    <li class="page-item disabled">
                                        <span class="page-link">Page {{ page|default(1) }} / {{ pages|default(1) }}</span>
                                    </li>

                                    <li class="page-item {% if page|default(1) >= pages|default(1) %}disabled{% endif %}">
                                        <a class="page-link"
                                           href="{{ path('societe_offres_index', baseParams|merge({page: (page|default(1) + 1)})) }}">
                                            Suivant <i class="fas fa-chevron-right ms-2"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{# Optionnel: active tooltips Bootstrap (si pas déjà fait dans base.html.twig) #}
{% block javascripts %}
    {{ parent() }}
    <script>
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
    </script>
{% endblock %}
