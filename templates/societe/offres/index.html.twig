{% extends 'base.html.twig' %}

{% block title %}Mes Offres de Stage{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap');

        :root {
            --neon-blue: #00f3ff;
            --neon-purple: #bf00ff;
            --neon-pink: #ff00ea;
            --neon-orange: #ff6b00;
            --dark-bg: #0a0e27;
            --darker-bg: #050816;
            --card-bg: #131631;
            --glass-bg: rgba(19, 22, 49, 0.7);
            --text-primary: #ffffff;
            --text-secondary: #b8b9cf;
            --success-glow: #00ff88;
            --warning-glow: #ffdd00;
            --danger-glow: #ff3366;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--dark-bg);
            font-family: 'Poppins', sans-serif;
            color: var(--text-primary);
            overflow-x: hidden;
            position: relative;
        }

        /* Animated Background */
        .animated-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            overflow: hidden;
        }

        .floating-shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.15;
            animation: float 20s infinite ease-in-out;
        }

        .shape-1 {
            width: 400px;
            height: 400px;
            background: var(--neon-blue);
            top: -200px;
            left: -200px;
            animation-delay: 0s;
        }

        .shape-2 {
            width: 500px;
            height: 500px;
            background: var(--neon-purple);
            top: 50%;
            right: -250px;
            animation-delay: 5s;
        }

        .shape-3 {
            width: 350px;
            height: 350px;
            background: var(--neon-pink);
            bottom: -175px;
            left: 30%;
            animation-delay: 10s;
        }

        .shape-4 {
            width: 450px;
            height: 450px;
            background: var(--neon-orange);
            top: 20%;
            left: 50%;
            animation-delay: 15s;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(100px, -100px) rotate(120deg); }
            66% { transform: translate(-50px, 100px) rotate(240deg); }
        }

        /* Grid Background */
        .grid-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(0, 243, 255, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 243, 255, 0.03) 1px, transparent 1px);
            background-size: 50px 50px;
            z-index: 1;
            pointer-events: none;
        }

        .page-wrapper {
            position: relative;
            z-index: 2;
            padding: 3rem 2rem;
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Glassmorphism Header */
        .page-header {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border-radius: 30px;
            padding: 3rem 3.5rem;
            margin-bottom: 3rem;
            border: 2px solid rgba(0, 243, 255, 0.1);
            box-shadow: 
                0 8px 32px 0 rgba(0, 0, 0, 0.37),
                inset 0 0 20px rgba(0, 243, 255, 0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: conic-gradient(
                from 0deg,
                transparent 0deg,
                var(--neon-blue) 90deg,
                transparent 180deg
            );
            animation: rotate 10s linear infinite;
            opacity: 0.1;
        }

        @keyframes rotate {
            100% { transform: rotate(360deg); }
        }

        .page-title {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            position: relative;
            z-index: 1;
        }

        .page-title-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            position: relative;
            animation: pulse-glow 2s ease-in-out infinite;
            box-shadow: 
                0 0 30px rgba(0, 243, 255, 0.5),
                0 0 60px rgba(191, 0, 255, 0.3);
        }

        @keyframes pulse-glow {
            0%, 100% { 
                box-shadow: 
                    0 0 30px rgba(0, 243, 255, 0.5),
                    0 0 60px rgba(191, 0, 255, 0.3);
                transform: scale(1);
            }
            50% { 
                box-shadow: 
                    0 0 50px rgba(0, 243, 255, 0.8),
                    0 0 100px rgba(191, 0, 255, 0.5);
                transform: scale(1.05);
            }
        }

        .page-title h1 {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple), var(--neon-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
            letter-spacing: -1px;
        }

        .page-title p {
            margin: 0.5rem 0 0 0;
            color: var(--text-secondary);
            font-size: 1rem;
            font-weight: 400;
        }

        /* Creative Button */
        .btn-new-offer {
            background: linear-gradient(135deg, var(--neon-purple), var(--neon-pink));
            color: white;
            border: none;
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
            position: relative;
            z-index: 1;
            overflow: hidden;
            font-size: 1.05rem;
            letter-spacing: 0.5px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 
                0 10px 40px rgba(191, 0, 255, 0.4),
                0 0 20px rgba(255, 0, 234, 0.3);
        }

        .btn-new-offer::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-new-offer:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 
                0 20px 60px rgba(191, 0, 255, 0.6),
                0 0 40px rgba(255, 0, 234, 0.5);
            color: white;
        }

        .btn-new-offer:hover::before {
            width: 300px;
            height: 300px;
        }

        /* Futuristic Filter Card */
        .filter-card {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border-radius: 30px;
            padding: 2.5rem;
            margin-bottom: 3rem;
            border: 2px solid rgba(0, 243, 255, 0.1);
            box-shadow: 
                0 8px 32px 0 rgba(0, 0, 0, 0.37),
                inset 0 0 20px rgba(0, 243, 255, 0.05);
            position: relative;
        }

        .filter-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid rgba(0, 243, 255, 0.2);
            position: relative;
        }

        .filter-header::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100px;
            height: 2px;
            background: linear-gradient(90deg, var(--neon-blue), transparent);
            animation: slide 3s ease-in-out infinite;
        }

        @keyframes slide {
            0%, 100% { transform: translateX(0); }
            50% { transform: translateX(200px); }
        }

        .filter-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.3rem;
            box-shadow: 0 0 20px rgba(0, 243, 255, 0.4);
        }

        .filter-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--text-primary);
            margin: 0;
            letter-spacing: -0.5px;
        }

        .form-label {
            font-weight: 600;
            color: var(--neon-blue);
            margin-bottom: 0.75rem;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-control, .form-select {
            background: rgba(10, 14, 39, 0.6);
            border: 2px solid rgba(0, 243, 255, 0.2);
            border-radius: 15px;
            padding: 1rem 1.25rem;
            color: var(--text-primary);
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .form-control:focus, .form-select:focus {
            outline: none;
            background: rgba(10, 14, 39, 0.8);
            border-color: var(--neon-blue);
            box-shadow: 
                0 0 0 4px rgba(0, 243, 255, 0.1),
                0 0 20px rgba(0, 243, 255, 0.3);
            color: var(--text-primary);
        }

        .form-control::placeholder {
            color: var(--text-secondary);
            opacity: 0.6;
        }

        .form-select option {
            background: var(--card-bg);
            color: var(--text-primary);
        }

        .btn-filter {
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            color: white;
            border: none;
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 700;
            transition: all 0.4s ease;
            box-shadow: 0 10px 30px rgba(0, 243, 255, 0.3);
            font-size: 1rem;
            letter-spacing: 0.5px;
        }

        .btn-filter:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(0, 243, 255, 0.5);
        }

        .btn-reset {
            background: transparent;
            color: var(--text-primary);
            border: 2px solid rgba(0, 243, 255, 0.3);
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 700;
            transition: all 0.4s ease;
            font-size: 1rem;
            letter-spacing: 0.5px;
        }

        .btn-reset:hover {
            background: rgba(0, 243, 255, 0.1);
            border-color: var(--neon-blue);
            transform: translateY(-3px);
        }

        /* Creative Table Card */
        .content-card {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border-radius: 30px;
            overflow: hidden;
            border: 2px solid rgba(0, 243, 255, 0.1);
            box-shadow: 
                0 8px 32px 0 rgba(0, 0, 0, 0.37),
                inset 0 0 20px rgba(0, 243, 255, 0.05);
        }

        .table-container {
            padding: 2.5rem;
        }

        .table {
            margin: 0;
            width: 100%;
        }

        .table thead th {
            background: linear-gradient(135deg, rgba(0, 243, 255, 0.1), rgba(191, 0, 255, 0.1));
            color: var(--neon-blue);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1.5px;
            padding: 1.5rem 1rem;
            border: none;
            white-space: nowrap;
            position: relative;
        }

        .table thead th::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, var(--neon-blue), var(--neon-purple), transparent);
        }

        .table tbody tr {
            border-bottom: 1px solid rgba(0, 243, 255, 0.1);
            transition: all 0.3s ease;
            position: relative;
        }

        .table tbody tr::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .table tbody tr:hover {
            background: rgba(0, 243, 255, 0.05);
            transform: translateX(10px);
        }

        .table tbody tr:hover::before {
            opacity: 1;
        }

        .table tbody td {
            padding: 1.75rem 1rem;
            vertical-align: middle;
            border: none;
            color: var(--text-primary);
        }

        .offer-title {
            font-weight: 700;
            color: var(--text-primary);
            font-size: 1.1rem;
            margin-bottom: 0.25rem;
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .text-muted {
            color: var(--text-secondary) !important;
            font-size: 0.85rem;
        }

        /* Neon Badges */
        .badge {
            padding: 0.6rem 1.2rem;
            border-radius: 50px;
            font-weight: 700;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: shimmer 3s infinite;
        }

        @keyframes shimmer {
            100% { left: 100%; }
        }

        .badge-type {
            background: linear-gradient(135deg, #0066ff, #00ccff);
            color: white;
            box-shadow: 
                0 5px 20px rgba(0, 102, 255, 0.4),
                0 0 15px rgba(0, 204, 255, 0.3);
        }

        .badge-status-published {
            background: linear-gradient(135deg, #00ff88, #00cc6a);
            color: #001a0d;
            box-shadow: 
                0 5px 20px rgba(0, 255, 136, 0.4),
                0 0 15px rgba(0, 255, 136, 0.3);
        }

        .badge-status-closed {
            background: linear-gradient(135deg, #666, #999);
            color: white;
            box-shadow: 0 5px 20px rgba(102, 102, 102, 0.4);
        }

        .badge-status-expired {
            background: linear-gradient(135deg, #ff3366, #ff6699);
            color: white;
            box-shadow: 
                0 5px 20px rgba(255, 51, 102, 0.4),
                0 0 15px rgba(255, 51, 102, 0.3);
        }

        .badge-candidatures {
            background: linear-gradient(135deg, var(--neon-purple), var(--neon-pink));
            color: white;
            box-shadow: 
                0 5px 20px rgba(191, 0, 255, 0.4),
                0 0 15px rgba(255, 0, 234, 0.3);
        }

        /* Futuristic Action Buttons */
        .btn-group-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn-action {
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            border: 2px solid;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            font-size: 1rem;
            position: relative;
            overflow: hidden;
        }

        .btn-action::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-action-view {
            background: transparent;
            color: #00ccff;
            border-color: #00ccff;
        }

        .btn-action-view::before {
            background: rgba(0, 204, 255, 0.2);
        }

        .btn-action-view:hover {
            background: #00ccff;
            color: var(--dark-bg);
            box-shadow: 
                0 10px 30px rgba(0, 204, 255, 0.5),
                0 0 20px rgba(0, 204, 255, 0.4);
            transform: translateY(-5px) rotate(5deg);
        }

        .btn-action-edit {
            background: transparent;
            color: #ffdd00;
            border-color: #ffdd00;
        }

        .btn-action-edit::before {
            background: rgba(255, 221, 0, 0.2);
        }

        .btn-action-edit:hover {
            background: #ffdd00;
            color: var(--dark-bg);
            box-shadow: 
                0 10px 30px rgba(255, 221, 0, 0.5),
                0 0 20px rgba(255, 221, 0, 0.4);
            transform: translateY(-5px) rotate(-5deg);
        }

        .btn-action-delete {
            background: transparent;
            color: #ff3366;
            border-color: #ff3366;
        }

        .btn-action-delete::before {
            background: rgba(255, 51, 102, 0.2);
        }

        .btn-action-delete:hover {
            background: #ff3366;
            color: white;
            box-shadow: 
                0 10px 30px rgba(255, 51, 102, 0.5),
                0 0 20px rgba(255, 51, 102, 0.4);
            transform: translateY(-5px) rotate(5deg);
        }

        .btn-action:hover::before {
            width: 100px;
            height: 100px;
        }

        /* Creative Empty State */
        .empty-state {
            text-align: center;
            padding: 5rem 2rem;
        }

        .empty-icon {
            font-size: 6rem;
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 2rem;
            animation: float-icon 3s ease-in-out infinite;
        }

        @keyframes float-icon {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        .empty-title {
            font-size: 2rem;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 1rem;
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .empty-text {
            color: var(--text-secondary);
            margin-bottom: 2.5rem;
            font-size: 1.1rem;
        }

        /* Futuristic Pagination */
        .pagination {
            margin: 2.5rem 0 0 0;
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        .page-item .page-link {
            background: rgba(10, 14, 39, 0.6);
            border: 2px solid rgba(0, 243, 255, 0.2);
            border-radius: 15px;
            padding: 1rem 1.75rem;
            color: var(--text-primary);
            font-weight: 600;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .page-item.active .page-link {
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            border-color: transparent;
            color: white;
            box-shadow: 0 10px 30px rgba(0, 243, 255, 0.4);
        }

        .page-item .page-link:hover:not(.disabled) {
            background: rgba(0, 243, 255, 0.1);
            border-color: var(--neon-blue);
            color: var(--neon-blue);
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 243, 255, 0.2);
        }

        .page-item.disabled .page-link {
            background: rgba(10, 14, 39, 0.3);
            color: rgba(184, 185, 207, 0.3);
            cursor: not-allowed;
            border-color: rgba(0, 243, 255, 0.05);
        }

        /* Neon Alerts */
        .alert {
            border-radius: 20px;
            border: 2px solid;
            padding: 1.25rem 2rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            font-weight: 600;
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
            animation: slideInDown 0.5s ease-out;
        }

        @keyframes slideInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            animation: shimmer 2s infinite;
        }

        .alert-success {
            background: rgba(0, 255, 136, 0.1);
            border-color: var(--success-glow);
            color: var(--success-glow);
            box-shadow: 0 0 30px rgba(0, 255, 136, 0.2);
        }

        .alert-danger {
            background: rgba(255, 51, 102, 0.1);
            border-color: var(--danger-glow);
            color: var(--danger-glow);
            box-shadow: 0 0 30px rgba(255, 51, 102, 0.2);
        }

        .alert-info {
            background: rgba(0, 243, 255, 0.1);
            border-color: var(--neon-blue);
            color: var(--neon-blue);
            box-shadow: 0 0 30px rgba(0, 243, 255, 0.2);
        }

        .btn-close {
            background: transparent;
            border: none;
            color: inherit;
            opacity: 0.7;
            font-size: 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-close:hover {
            opacity: 1;
            transform: rotate(90deg);
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .page-header {
                flex-direction: column;
                gap: 2rem;
                text-align: center;
            }

            .page-title {
                flex-direction: column;
            }
        }

        @media (max-width: 768px) {
            .page-wrapper {
                padding: 2rem 1rem;
            }

            .page-header {
                padding: 2rem 1.5rem;
            }

            .page-title h1 {
                font-size: 1.75rem;
            }

            .table-container {
                overflow-x: auto;
                padding: 1.5rem;
            }

            .filter-card {
                padding: 1.5rem;
            }

            .btn-group-actions {
                flex-direction: column;
            }

            .floating-shape {
                filter: blur(60px);
            }
        }

        /* Additional Glitch Effect for Title */
        @keyframes glitch {
            0% {
                text-shadow: 2px 2px var(--neon-blue), -2px -2px var(--neon-pink);
            }
            25% {
                text-shadow: -2px -2px var(--neon-blue), 2px 2px var(--neon-pink);
            }
            50% {
                text-shadow: 2px -2px var(--neon-blue), -2px 2px var(--neon-pink);
            }
            75% {
                text-shadow: -2px 2px var(--neon-blue), 2px -2px var(--neon-pink);
            }
            100% {
                text-shadow: 2px 2px var(--neon-blue), -2px -2px var(--neon-pink);
            }
        }

        .page-title h1:hover {
            animation: glitch 0.3s ease-in-out;
        }

        /* Scanline Effect */
        .scanline {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--neon-blue), transparent);
            animation: scan 4s linear infinite;
            pointer-events: none;
            z-index: 9999;
            opacity: 0.3;
        }

        @keyframes scan {
            0% { transform: translateY(0); }
            100% { transform: translateY(100vh); }
        }
    </style>
{% endblock %}

{% block body %}
<!-- Animated Background -->
<div class="animated-background">
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="floating-shape shape-3"></div>
    <div class="floating-shape shape-4"></div>
</div>
<div class="grid-overlay"></div>
<div class="scanline"></div>

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Header -->
        <div class="page-header">
            <div class="page-title">
                <div class="page-title-icon">
                    <i class="fas fa-briefcase"></i>
                </div>
                <div>
                    <h1>Mes Offres de Stage</h1>
                    <p>Gérez vos offres et suivez les candidatures</p>
                </div>
            </div>
            <a href="{{ path('societe_offre_new') }}" class="btn-new-offer">
                <i class="fas fa-plus"></i>
                Nouvelle Offre
            </a>
        </div>

        <!-- Flash Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-circle' }}"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Filters -->
        <div class="filter-card">
            <div class="filter-header">
                <div class="filter-icon">
                    <i class="fas fa-filter"></i>
                </div>
                <h3 class="filter-title">Filtres de recherche</h3>
            </div>

            <form method="get" action="{{ path('societe_offres_index') }}">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Titre</label>
                        <input type="text" name="titre" value="{{ filters.titre|default('') }}" class="form-control" placeholder="Rechercher par titre...">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Type</label>
                        <select name="typeStage" class="form-select">
                            <option value="">Tous les types</option>
                            <option value="stage_observation" {% if filters.typeStage|default('') == 'stage_observation' %}selected{% endif %}>Stage observation</option>
                            <option value="stage_application" {% if filters.typeStage|default('') == 'stage_application' %}selected{% endif %}>Stage application</option>
                            <option value="stage_perfectionnement" {% if filters.typeStage|default('') == 'stage_perfectionnement' %}selected{% endif %}>Stage perfectionnement</option>
                            <option value="pfe" {% if filters.typeStage|default('') == 'pfe' %}selected{% endif %}>PFE</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Statut</label>
                        <select name="statut" class="form-select">
                            <option value="">Tous les statuts</option>
                            <option value="publiee" {% if filters.statut|default('') == 'publiee' %}selected{% endif %}>Publiée</option>
                            <option value="fermee" {% if filters.statut|default('') == 'fermee' %}selected{% endif %}>Fermée</option>
                            <option value="expiree" {% if filters.statut|default('') == 'expiree' %}selected{% endif %}>Expirée</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Domaine</label>
                        <input type="text" name="domaine" value="{{ filters.domaine|default('') }}" class="form-control" placeholder="Ex: Informatique">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Lieu</label>
                        <input type="text" name="lieu" value="{{ filters.lieu|default('') }}" class="form-control" placeholder="Ex: Tunis">
                    </div>
                    <div class="col-md-1">
                        <label class="form-label">Par page</label>
                        <select name="limit" class="form-select">
                            <option value="5" {% if limit|default(10) == 5 %}selected{% endif %}>5</option>
                            <option value="10" {% if limit|default(10) == 10 %}selected{% endif %}>10</option>
                            <option value="20" {% if limit|default(10) == 20 %}selected{% endif %}>20</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn-filter">
                        <i class="fas fa-search"></i> Rechercher
                    </button>
                    <a href="{{ path('societe_offres_index') }}" class="btn-reset">
                        <i class="fas fa-redo"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>

        <!-- Content -->
        <div class="content-card">
            <div class="table-container">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Titre de l'offre</th>
                                <th>Type</th>
                                <th>Durée</th>
                                <th>Publication</th>
                                <th>Candidatures</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for offre in offres %}
                            <tr>
                                <td>
                                    <div class="offer-title">{{ offre.titre }}</div>
                                    <small class="text-muted">{{ offre.entreprise }}</small>
                                </td>
                                <td>
                                    <span class="badge badge-type">
                                        {{ offre.typeStage|replace({'_': ' '})|title }}
                                    </span>
                                </td>
                                <td>{{ offre.duree }}</td>
                                <td>{{ offre.datePublication|date('d/m/Y') }}</td>
                                <td>
                                    <span class="badge badge-candidatures">
                                        {{ offre.candidatures|length }} 
                                        <i class="fas fa-user-graduate"></i>
                                    </span>
                                </td>
                                <td>
                                    {% if offre.statut == 'publiee' %}
                                        <span class="badge badge-status-published">
                                            <i class="fas fa-check-circle"></i> Publiée
                                        </span>
                                    {% elseif offre.statut == 'fermee' %}
                                        <span class="badge badge-status-closed">
                                            <i class="fas fa-lock"></i> Fermée
                                        </span>
                                    {% else %}
                                        <span class="badge badge-status-expired">
                                            <i class="fas fa-times-circle"></i> Expirée
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group-actions">
                                        <a href="{{ path('societe_offre_show', {id: offre.id}) }}" 
                                           class="btn-action btn-action-view"
                                           title="Voir les détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('societe_offre_edit', {id: offre.id}) }}" 
                                           class="btn-action btn-action-edit"
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" 
                                              action="{{ path('societe_offre_delete', {id: offre.id}) }}" 
                                              style="display:inline;" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
                                            <button type="submit" 
                                                    class="btn-action btn-action-delete"
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7">
                                    <div class="empty-state">
                                        <div class="empty-icon">
                                            <i class="fas fa-briefcase"></i>
                                        </div>
                                        <h3 class="empty-title">Aucune offre pour le moment</h3>
                                        <p class="empty-text">Commencez par publier votre première offre de stage</p>
                                        <a href="{{ path('societe_offre_new') }}" class="btn-new-offer">
                                            <i class="fas fa-plus"></i>
                                            Créer ma première offre
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                {% if pages|default(1) > 1 %}
                    {% set baseParams = {
                        titre: filters.titre|default(''),
                        typeStage: filters.typeStage|default(''),
                        statut: filters.statut|default(''),
                        domaine: filters.domaine|default(''),
                        lieu: filters.lieu|default(''),
                        limit: limit|default(10)
                    } %}
                    <nav aria-label="Pagination">
                        <ul class="pagination">
                            <li class="page-item {% if page|default(1) <= 1 %}disabled{% endif %}">
                                <a class="page-link" href="{{ path('societe_offres_index', baseParams|merge({page: (page|default(1) - 1)})) }}">
                                    <i class="fas fa-chevron-left"></i> Précédent
                                </a>
                            </li>
                            <li class="page-item active">
                                <span class="page-link">
                                    Page {{ page|default(1) }} / {{ pages|default(1) }}
                                </span>
                            </li>
                            <li class="page-item {% if page|default(1) >= pages|default(1) %}disabled{% endif %}">
                                <a class="page-link" href="{{ path('societe_offres_index', baseParams|merge({page: (page|default(1) + 1)})) }}">
                                    Suivant <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script>
    // Add dynamic particle effects on hover
    document.querySelectorAll('.btn-action').forEach(btn => {
        btn.addEventListener('mouseenter', function(e) {
            const rect = this.getBoundingClientRect();
            for(let i = 0; i < 5; i++) {
                setTimeout(() => {
                    createParticle(rect.left + rect.width/2, rect.top + rect.height/2);
                }, i * 50);
            }
        });
    });

    function createParticle(x, y) {
        const particle = document.createElement('div');
        particle.style.position = 'fixed';
        particle.style.width = '4px';
        particle.style.height = '4px';
        particle.style.background = `hsl(${Math.random() * 360}, 100%, 50%)`;
        particle.style.borderRadius = '50%';
        particle.style.pointerEvents = 'none';
        particle.style.left = x + 'px';
        particle.style.top = y + 'px';
        particle.style.zIndex = '10000';
        document.body.appendChild(particle);

        const angle = Math.random() * Math.PI * 2;
        const velocity = 2 + Math.random() * 3;
        const vx = Math.cos(angle) * velocity;
        const vy = Math.sin(angle) * velocity;

        let posX = x, posY = y;
        let opacity = 1;
        
        const animate = () => {
            posX += vx;
            posY += vy;
            opacity -= 0.02;
            
            particle.style.left = posX + 'px';
            particle.style.top = posY + 'px';
            particle.style.opacity = opacity;
            
            if(opacity > 0) {
                requestAnimationFrame(animate);
            } else {
                particle.remove();
            }
        };
        
        animate();
    }
</script>
{% endblock %}
