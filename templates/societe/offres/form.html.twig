{% extends 'base.html.twig' %}

{% block title %}{{ offre.id ? 'Modifier' : 'Nouvelle' }} Offre{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 col-12 mx-auto">
                {# Flash messages #}
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-4">{{ offre.id ? 'Modifier l\'offre' : 'Nouvelle offre de stage' }}</h4>
                        
                        {{ form_start(form) }}
                        
                        {# Afficher les erreurs globales du formulaire #}
                        {{ form_errors(form) }}
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    {{ form_label(form.titre) }}
                                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.titre) }}
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.entreprise) }}
                                    {{ form_widget(form.entreprise, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.entreprise) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.domaine) }}
                                    {{ form_widget(form.domaine, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.domaine) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.profilDemande) }}
                                    {{ form_widget(form.profilDemande, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.profilDemande) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.typeStage) }}
                                    {{ form_widget(form.typeStage, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.typeStage) }}
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.duree) }}
                                    {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.duree) }}
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.lieu) }}
                                    {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.lieu) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.dateDebut) }}
                                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.dateDebut) }}
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.dateFin) }}
                                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.dateFin) }}
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.remuneration) }}
                                    {{ form_widget(form.remuneration, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.remuneration) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-{% if form.statut is defined %}8{% else %}12{% endif %}">
                                <div class="mb-3">
                                    {{ form_label(form.competencesRequises) }}
                                    {{ form_widget(form.competencesRequises, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.competencesRequises) }}
                                </div>
                            </div>
                            
                            {% if form.statut is defined %}
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.statut) }}
                                    {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.statut) }}
                                </div>
                            </div>
                            {% endif %}
                        </div>
                        
                        <h5 class="mt-4 mb-3">Informations de contact</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.contactEmail) }}
                                    {{ form_widget(form.contactEmail, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.contactEmail) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.contactTel) }}
                                    {{ form_widget(form.contactTel, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.contactTel) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('societe_offres_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> {{ offre.id ? 'Mettre Ã  jour' : 'Publier' }}
                            </button>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
