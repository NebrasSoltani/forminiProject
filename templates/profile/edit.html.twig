{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title">Modifier mon profil</h4>
                        <a href="{% if app.user.roleUtilisateur == 'apprenant' %}{{ path('apprenant_dashboard') }}{% elseif app.user.roleUtilisateur == 'formateur' %}{{ path('formateur_dashboard') }}{% elseif app.user.roleUtilisateur == 'admin' %}{{ path('admin_dashboard') }}{% else %}{{ path('societe_dashboard') }}{% endif %}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour au dashboard
                        </a>
                    </div>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    <div class="row">
                        <div class="col-md-3 text-center mb-4">
                            <div class="profile-photo-container">
                                {% if user.photo %}
                                    <img src="{{ asset('uploads/photos/' ~ user.photo) }}" alt="{{ user.nom }}" class="img-fluid rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover; border: 4px solid #6974e8;">
                                {% else %}
                                    <img src="{{ asset('asset/images/default-avatar.png') }}" alt="Avatar" class="img-fluid rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover; border: 4px solid #6974e8;">
                                {% endif %}
                                <p class="text-muted"><small>Photo de profil actuelle</small></p>
                            </div>
                        </div>

                        <div class="col-md-9">
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.prenom) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.telephone) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.governorat, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.governorat, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.governorat) }}
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.dateNaissance, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.dateNaissance) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.profession, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.profession, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.profession) }}
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-group">
                                    {{ form_label(form.photo, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.photo) }}
                                    <small class="form-text text-muted">Formats acceptés: JPG, PNG, GIF. Taille max: 2 Mo</small>
                                </div>
                            </div>

                            {# Champs spécifiques selon le rôle #}
                            {% if user.roleUtilisateur == 'formateur' %}
                                <hr class="my-4">
                                <h5 class="mb-3 text-primary"><i class="fas fa-chalkboard-teacher"></i> Informations Formateur</h5>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.specialite, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.specialite) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.experienceAnnees, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.experienceAnnees, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.experienceAnnees) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.bio, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.bio, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.bio) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.linkedin, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.linkedin, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.linkedin) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.portfolio, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.portfolio, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.portfolio) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.cv, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.cv, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.cv) }}
                                        {% if user.formateur and user.formateur.cv %}
                                            <small class="form-text text-muted">
                                                CV actuel: <a href="{{ asset('uploads/cv/' ~ user.formateur.cv) }}" target="_blank">{{ user.formateur.cv }}</a>
                                            </small>
                                        {% endif %}
                                    </div>
                                </div>

                            {% elseif user.roleUtilisateur == 'apprenant' %}
                                <hr class="my-4">
                                <h5 class="mb-3 text-success"><i class="fas fa-user-graduate"></i> Informations Apprenant</h5>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.genre, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.genre) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.etatCivil, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.etatCivil, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.etatCivil) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.niveauEtude, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.niveauEtude, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.niveauEtude) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.objectif, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.objectif, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.objectif) }}
                                    </div>
                                </div>

                            {% elseif user.roleUtilisateur == 'societe' %}
                                <hr class="my-4">
                                <h5 class="mb-3 text-info"><i class="fas fa-building"></i> Informations Société</h5>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.nomSociete, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.nomSociete, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.nomSociete) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.secteur, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.secteur, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.secteur) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.descriptionSociete, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.descriptionSociete, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.descriptionSociete) }}
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.adresse) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.siteWeb, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.siteWeb, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.siteWeb) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_label(form.logo, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.logo, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.logo) }}
                                            {% if user.societe and user.societe.logo %}
                                                <small class="form-text text-muted">
                                                    Logo actuel: <img src="{{ asset('uploads/logos/' ~ user.societe.logo) }}" alt="Logo" style="max-height: 40px;" class="mt-2">
                                                </small>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            <hr class="my-4">
                            <h5 class="mb-3">Changer le mot de passe</h5>
                            <p class="text-muted small">Laissez les champs vides si vous ne souhaitez pas modifier votre mot de passe.</p>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.newPassword.first) }}
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.newPassword.second) }}
                                    </div>
                                </div>
                            </div>

                            <div class="text-end mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-save"></i> Enregistrer les modifications
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
