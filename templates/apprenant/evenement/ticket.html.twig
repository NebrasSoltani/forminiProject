{% extends 'public_base.html.twig' %}

{% block title %}Mon Billet - {{ evenement.titre }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .ticket-wrapper {
        background-color: #f4f6f9;
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }
    .ticket-container {
        max-width: 800px;
        width: 100%;
        border: none;
        border-radius: 20px;
        background: #fff;
        padding: 40px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }
    .ticket-header {
        border-bottom: 2px dashed #eee;
        padding-bottom: 20px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .ticket-title {
        color: #667eea;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
    }
    .event-title {
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 15px;
        color: #2a2a2a;
    }
    .event-info {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 8px;
    }
    .attendee-box {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        margin-top: 30px;
        border-left: 5px solid #667eea;
    }
    .qr-code-section {
        text-align: center;
        margin-top: 10px;
    }
    .qr-code-img {
        width: 180px;
        height: 180px;
        border: 1px solid #eee;
        padding: 10px;
        background: white;
        border-radius: 10px;
    }
    .ticket-footer {
        text-align: center;
        margin-top: 40px;
        font-size: 0.9rem;
        color: #999;
        border-top: 1px solid #eee;
        padding-top: 20px;
    }
    .action-buttons {
        margin-bottom: 2rem;
        text-align: center;
    }
    @media print {
        body * {
            visibility: hidden;
        }
        .ticket-container, .ticket-container * {
            visibility: visible;
        }
        .ticket-container {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            margin: 0;
            box-shadow: none;
            border: 2px solid #000;
        }
        .no-print {
            display: none !important;
        }
        .ticket-wrapper {
            background: white;
            padding: 0;
            display: block;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="ticket-wrapper">
    <div class="container">
        <!-- Actions -->
        <div class="row mb-4 no-print">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <a href="{{ path('apprenant_evenements_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>Retour aux événements
                </a>
                <button onclick="window.print()" class="btn btn-primary rounded-pill px-4 shadow-sm">
                    <i class="bi bi-printer me-2"></i>Imprimer / Enregistrer
                </button>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center mb-4 no-print rounded-pill shadow-sm">
                <i class="bi bi-check-circle-fill me-2"></i>{{ message }}
            </div>
        {% endfor %}

        <!-- Billet -->
        <div class="ticket-container mx-auto">
            <div class="row">
                <div class="col-md-8">
                    <div class="ticket-header">
                        <span class="ticket-title"><i class="bi bi-ticket-perforated me-2"></i>Billet Électronique</span>
                        <span class="badge bg-success rounded-pill px-3">Confirmé</span>
                    </div>
                    
                    <h1 class="event-title">{{ evenement.titre }}</h1>
                    
                    <div class="mb-4">
                        <p class="event-info">
                            <i class="bi bi-calendar-check me-2 text-primary"></i> 
                            {{ evenement.dateDebut|date('d/m/Y') }} à {{ evenement.dateDebut|date('H:i') }}
                        </p>
                        <p class="event-info">
                            <i class="bi bi-geo-alt me-2 text-danger"></i> 
                            {{ evenement.lieu }}
                        </p>
                        <p class="event-info">
                            <i class="bi bi-tag me-2 text-info"></i> 
                            {{ evenement.type }}
                        </p>
                    </div>

                    <div class="attendee-box">
                        <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Participant</small>
                        <h4 class="mb-1 mt-1">{{ user.prenom }} {{ user.nom }}</h4>
                        <p class="mb-0 text-muted small">{{ user.email }}</p>
                        <p class="mb-0 text-muted small">{{ user.telephone }}</p>
                        {% if user.gouvernorat %}
                            <p class="mb-0 text-muted small mt-1">
                                <i class="bi bi-geo me-1"></i>{{ user.gouvernorat.value }}
                            </p>
                        {% endif %}
                    </div>
                </div>
                
                <div class="col-md-4 d-flex flex-column align-items-center justify-content-center border-start border-light">
                    <div class="qr-code-section">
                        {% set location = user.gouvernorat ? user.gouvernorat.value : evenement.lieu %}
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={{ ('https://www.google.com/maps/search/?api=1&query=' ~ evenement.lieu)|url_encode }}" 
                             alt="QR Code" 
                             class="qr-code-img">
                        <p class="mt-3 text-muted small fw-bold mb-1">
                            Localisation Événement
                        </p>
                        <p class="text-muted small">
                            <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                            {{ evenement.lieu }}
                        </p>
                        <div class="mt-4 pt-3 border-top w-100">
                            <small class="d-block text-muted text-uppercase" style="font-size: 0.7rem;">N° de Billet</small>
                            <strong style="font-size: 1.2rem; letter-spacing: 1px;">#{{ '%06d'|format(participation.id) }}</strong>
                        </div>
                    </div>
                </div>
            </div>
            

        </div>
    </div>
</div>
{% endblock %}
