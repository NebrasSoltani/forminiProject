{% extends 'base.html.twig' %}

{% block title %}{{ quiz.titre }} - {{ formation.titre }}{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('apprenant_mes_formations') }}">Mes Formations</a></li>
                <li class="breadcrumb-item"><a href="{{ path('apprenant_suivre_formation', {'id': formation.id}) }}">{{ formation.titre }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('apprenant_quiz_index', {'formationId': formation.id}) }}">Quiz</a></li>
                <li class="breadcrumb-item active">{{ quiz.titre }}</li>
            </ol>
        </nav>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">üéØ {{ quiz.titre }}</h3>
            <div>
                <span class="badge bg-light text-dark">Note minimale : {{ quiz.noteMinimale }}%</span>
            </div>
        </div>

        <div class="card-body">
            {% if quiz.description %}
                <p class="lead text-muted">{{ quiz.description }}</p>
            {% endif %}

            <div class="d-flex justify-content-between mb-4 flex-wrap gap-3">
                <div>
                    <strong>Dur√©e estim√©e :</strong> {{ quiz.duree }} min
                </div>
                <div>
                    <strong>Questions :</strong> {{ questions|length }}
                </div>
            </div>

            <!-- Barre de progression -->
            <div class="progress mb-4" style="height: 10px;">
                <div id="progress-bar" class="progress-bar bg-success" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>

            <div class="text-center mb-4">
                <h5>Question <span id="current-question-number">1</span> sur {{ questions|length }}</h5>
            </div>

            <form method="post" action="{{ path('apprenant_quiz_soumettre', {'formationId': formation.id, 'quizId': quiz.id}) }}" id="quiz-form">
                {% for question in questions %}
                    <div class="question-card card mb-4 d-none" data-question-index="{{ loop.index0 }}">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Question {{ loop.index }}</h5>
                        </div>
                        <div class="card-body">
                            <p class="lead fw-bold">{{ question.enonce }}</p>

                            <div class="mt-4">
                                {% for reponse in question.reponses %}
                                    <div class="form-check mb-3 fs-5">
                                        <input class="form-check-input"
                                               type="radio"
                                               name="reponses[{{ question.id }}]"
                                               id="q{{ question.id }}_r{{ reponse.id }}"
                                               value="{{ reponse.id }}"
                                               required>
                                        <label class="form-check-label" for="q{{ question.id }}_r{{ reponse.id }}">
                                            {{ reponse.texte }}
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <!-- Navigation -->
                <div class="d-flex justify-content-between align-items-center mt-5">
                    <button type="button" class="btn btn-outline-secondary btn-lg" id="prev-btn" disabled>
                        ‚Üê Pr√©c√©dent
                    </button>

                    <div class="d-flex gap-3 align-items-center">
                        <span id="page-info" class="fw-bold">1 / {{ questions|length }}</span>
                        <button type="button" class="btn btn-primary btn-lg" id="next-btn">
                            Suivant ‚Üí
                        </button>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg d-none" id="submit-btn">
                        Terminer et Soumettre ‚úì
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const questions = document.querySelectorAll('.question-card');
    const totalQuestions = questions.length;
    let currentIndex = 0;

    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const submitBtn = document.getElementById('submit-btn');
    const progressBar = document.getElementById('progress-bar');
    const currentNumber = document.getElementById('current-question-number');
    const pageInfo = document.getElementById('page-info');

    function showQuestion(index) {
        questions.forEach((q, i) => {
            q.classList.toggle('d-none', i !== index);
        });

        currentNumber.textContent = index + 1;
        pageInfo.textContent = `${index + 1} / ${totalQuestions}`;

        // Mise √† jour progression
        const progress = ((index + 1) / totalQuestions) * 100;
        progressBar.style.width = `${progress}%`;
        progressBar.setAttribute('aria-valuenow', progress);

        // Activation/d√©sactivation boutons
        prevBtn.disabled = index === 0;
        nextBtn.classList.toggle('d-none', index === totalQuestions - 1);
        submitBtn.classList.toggle('d-none', index !== totalQuestions - 1);
    }

    function canGoNext() {
        const currentQuestion = questions[currentIndex];
        const radios = currentQuestion.querySelectorAll('input[type="radio"]');
        return Array.from(radios).some(radio => radio.checked);
    }

    prevBtn.addEventListener('click', () => {
        if (currentIndex > 0) {
            currentIndex--;
            showQuestion(currentIndex);
        }
    });

    nextBtn.addEventListener('click', () => {
        if (currentIndex < totalQuestions - 1) {
            // Option : d√©commenter pour obliger √† r√©pondre avant de passer
            /*
            if (!canGoNext()) {
                alert('Veuillez r√©pondre √† la question avant de continuer.');
                return;
            }
            */

            currentIndex++;
            showQuestion(currentIndex);
        }
    });

    // Soumission finale
    document.getElementById('quiz-form').addEventListener('submit', function (e) {
        // V√©rification finale que toutes les questions sont r√©pondues
        let allAnswered = true;
        const formData = new FormData(this);

        questions.forEach(question => {
            const questionId = question.querySelector('input[type="radio"]').name;
            if (!formData.has(questionId)) {
                allAnswered = false;
            }
        });

        if (!allAnswered) {
            e.preventDefault();
            alert('Veuillez r√©pondre √† toutes les questions avant de soumettre le quiz.');
            return;
        }

        if (!confirm('Confirmez-vous la soumission de votre quiz ? Vous ne pourrez plus modifier vos r√©ponses.')) {
            e.preventDefault();
            return;
        }

        submitBtn.disabled = true;
        submitBtn.innerHTML = 'Envoi en cours...';
    });

    // Afficher la premi√®re question
    showQuestion(0);
});
</script>

<style>
    .question-card {
        min-height: 300px;
        transition: all 0.3s ease;
    }
    .form-check-label {
        cursor: pointer;
    }
    .form-check-input:checked + .form-check-label {
        font-weight: bold;
        color: #0d6efd;
    }
</style>
{% endblock %}
