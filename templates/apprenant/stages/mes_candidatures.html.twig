{% extends 'base.html.twig' %}

{% block title %}Mes Candidatures{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-4"><i class="fas fa-file-alt"></i> Mes Candidatures</h4>

                        {% if candidatures is empty %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Vous n'avez encore postulé à aucune offre de stage.
                                <a href="{{ path('apprenant_stages_index') }}" class="alert-link">Parcourir les offres disponibles</a>
                            </div>
                        {% else %}
                            <div class="row">
                                {% for candidature in candidatures %}
                                <div class="col-12 mb-4">
                                    <div class="card shadow-sm">
                                        <div class="card-header bg-light">
                                            <div class="row align-items-center">
                                                <div class="col-md-8">
                                                    <h5 class="mb-1">{{ candidature.offreStage.titre }}</h5>
                                                    <p class="text-muted mb-0">
                                                        <i class="fas fa-building"></i> {{ candidature.offreStage.entreprise }} | 
                                                        <i class="fas fa-calendar"></i> Postulé le {{ candidature.dateCandidature|date('d/m/Y à H:i') }}
                                                    </p>
                                                </div>
                                                <div class="col-md-4 text-end">
                                                    {% if candidature.statut == 'en_attente' %}
                                                        <span class="badge bg-warning text-dark fs-6"><i class="fas fa-clock"></i> En attente</span>
                                                    {% elseif candidature.statut == 'acceptee' %}
                                                        <span class="badge bg-success fs-6"><i class="fas fa-check-circle"></i> Acceptée</span>
                                                    {% else %}
                                                        <span class="badge bg-danger fs-6"><i class="fas fa-times-circle"></i> Refusée</span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <h6><i class="fas fa-briefcase"></i> Détails de l'offre</h6>
                                                    <ul class="list-unstyled">
                                                        <li><strong>Type:</strong> <span class="badge bg-info">{{ candidature.offreStage.typeStage|replace({'_': ' '})|title }}</span></li>
                                                        <li><strong>Lieu:</strong> {{ candidature.offreStage.lieu }}</li>
                                                        <li><strong>Durée:</strong> {{ candidature.offreStage.duree }}</li>
                                                        <li><strong>Période:</strong> {{ candidature.offreStage.dateDebut|date('d/m/Y') }} - {{ candidature.offreStage.dateFin|date('d/m/Y') }}</li>
                                                    </ul>
                                                    <a href="{{ path('apprenant_stage_show', {id: candidature.offreStage.id}) }}" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-external-link-alt"></i> Voir l'offre complète
                                                    </a>
                                                </div>
                                                <div class="col-md-6">
                                                    <h6><i class="fas fa-envelope"></i> Ma lettre de motivation</h6>
                                                    <div class="bg-light p-3 rounded mb-3" style="max-height: 200px; overflow-y: auto;">
                                                        {{ candidature.lettreMotivation|nl2br }}
                                                    </div>
                                                    
                                                    {% if candidature.cv %}
                                                        <a href="{{ asset('uploads/cv/' ~ candidature.cv) }}" target="_blank" class="btn btn-sm btn-primary">
                                                            <i class="fas fa-download"></i> Télécharger mon CV
                                                        </a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            
                                            {% if candidature.commentaire %}
                                                <hr>
                                                <div class="alert alert-info mb-0">
                                                    <h6 class="alert-heading"><i class="fas fa-comment"></i> Commentaire de l'entreprise</h6>
                                                    <p class="mb-0">{{ candidature.commentaire|nl2br }}</p>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
