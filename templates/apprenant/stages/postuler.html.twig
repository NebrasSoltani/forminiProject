{% extends 'base.html.twig' %}

{% block title %}Postuler - {{ offre.titre }}{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-12 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-4"><i class="fas fa-paper-plane"></i> Postuler pour : {{ offre.titre }}</h4>
                        <p class="text-muted">{{ offre.entreprise }} - {{ offre.lieu }}</p>

                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        
                        <div class="mb-3">
                            {{ form_label(form.lettreMotivation, 'Lettre de motivation') }}
                            {{ form_widget(form.lettreMotivation, {'attr': {'class': 'form-control', 'rows': 10}}) }}
                            <div class="form-text">Expliquez pourquoi vous êtes intéressé par cette offre</div>
                            {{ form_errors(form.lettreMotivation) }}
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.cv, 'Curriculum Vitae (CV)') }}
                            {{ form_widget(form.cv, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-text">Format PDF uniquement, taille max 5MB</div>
                            {{ form_errors(form.cv) }}
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('apprenant_stage_show', {id: offre.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane"></i> Envoyer ma candidature
                            </button>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
