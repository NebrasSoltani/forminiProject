{% extends 'base.html.twig' %}

{% block title %}{{ offre.titre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Breadcrumb Modern -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a href="{{ path('apprenant_stages_index') }}" class="text-decoration-none"><i class="bi bi-briefcase me-1"></i>Stages</a></li>
            <li class="breadcrumb-item"><a href="{{ path('apprenant_stages_index', {type: offre.typeStage}) }}" class="text-decoration-none">{{ offre.typeStage|replace({'_': ' '})|title }}</a></li>
            <li class="breadcrumb-item active">{{ offre.titre }}</li>
        </ol>
    </nav>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
            <i class="bi bi-x-circle-fill me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row g-4">
        <!-- Colonne principale -->
        <div class="col-lg-8">
            <!-- En-tête de l'offre -->
            <div class="mb-4">
                <h1 class="display-5 fw-bold text-dark mb-3">{{ offre.titre }}</h1>
                
                <div class="d-flex flex-wrap gap-2 mb-4">
                    <span class="badge tera-badge-type">
                        {% if offre.typeStage == 'stage_observation' %}
                            <i class="bi bi-eye-fill me-1"></i>
                        {% elseif offre.typeStage == 'stage_application' %}
                            <i class="bi bi-code-square me-1"></i>
                        {% elseif offre.typeStage == 'stage_perfectionnement' %}
                            <i class="bi bi-star-fill me-1"></i>
                        {% elseif offre.typeStage == 'pfe' %}
                            <i class="bi bi-mortarboard-fill me-1"></i>
                        {% endif %}
                        {{ offre.typeStage|replace({'_': ' '})|title }}
                    </span>
                    {% if offre.domaine %}
                        <span class="badge tera-badge-domain">{{ offre.domaine }}</span>
                    {% endif %}
                    {% if offre.remuneration %}
                        <span class="badge tera-badge-salary"><i class="bi bi-cash-coin me-1"></i>Rémunéré</span>
                    {% endif %}
                </div>

                <!-- Stats Offre -->
                <div class="d-flex flex-wrap gap-4 text-muted mb-4">
                    <div class="d-flex align-items-center gap-2">
                        <div class="tera-icon-badge">
                            <i class="bi bi-building"></i>
                        </div>
                        <span class="fw-semibold">{{ offre.entreprise }}</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="tera-icon-badge">
                            <i class="bi bi-geo-alt"></i>
                        </div>
                        <span>{{ offre.lieu }}</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="tera-icon-badge">
                            <i class="bi bi-clock"></i>
                        </div>
                        <span>{{ offre.duree }}</span>
                    </div>
                </div>
            </div>

            <!-- Description du poste -->
            <div class="tera-content-card mb-4">
                <div class="card-body">
                    <h4 class="tera-section-title">Description du poste</h4>
                    <p class="tera-text-content">{{ offre.description|nl2br }}</p>

                    <hr class="my-4">

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="tera-info-box">
                                <div class="tera-info-icon">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                                <div>
                                    <div class="tera-info-label">Date de début</div>
                                    <div class="tera-info-value">{{ offre.dateDebut|date('d/m/Y') }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="tera-info-box">
                                <div class="tera-info-icon">
                                    <i class="bi bi-calendar-check"></i>
                                </div>
                                <div>
                                    <div class="tera-info-label">Date de fin</div>
                                    <div class="tera-info-value">{{ offre.dateFin|date('d/m/Y') }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profil demandé -->
            {% if offre.profilDemande %}
            <div class="tera-content-card mb-4">
                <div class="card-body">
                    <h4 class="tera-section-title"><i class="bi bi-person-check me-2"></i>Profil recherché</h4>
                    <p class="tera-text-content">{{ offre.profilDemande|nl2br }}</p>
                </div>
            </div>
            {% endif %}

            <!-- Compétences -->
            {% if offre.competencesRequises %}
            <div class="tera-content-card mb-4">
                <div class="card-body">
                    <h4 class="tera-section-title"><i class="bi bi-gear me-2"></i>Compétences requises</h4>
                    <p class="tera-text-content">{{ offre.competencesRequises|nl2br }}</p>
                </div>
            </div>
            {% endif %}

            <!-- Contact -->
            {% if offre.contactEmail or offre.contactTel %}
            <div class="tera-content-card mb-4">
                <div class="card-body">
                    <h4 class="tera-section-title"><i class="bi bi-telephone me-2"></i>Informations de contact</h4>
                    
                    <div class="row g-3">
                        {% if offre.contactEmail %}
                        <div class="col-md-6">
                            <div class="tera-contact-item">
                                <div class="tera-contact-icon">
                                    <i class="bi bi-envelope-fill"></i>
                                </div>
                                <div>
                                    <div class="tera-contact-label">Email</div>
                                    <a href="mailto:{{ offre.contactEmail }}" class="tera-contact-value">{{ offre.contactEmail }}</a>
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        {% if offre.contactTel %}
                        <div class="col-md-6">
                            <div class="tera-contact-item">
                                <div class="tera-contact-icon">
                                    <i class="bi bi-telephone-fill"></i>
                                </div>
                                <div>
                                    <div class="tera-contact-label">Téléphone</div>
                                    <a href="tel:{{ offre.contactTel }}" class="tera-contact-value">{{ offre.contactTel }}</a>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Sidebar droit -->
        <div class="col-lg-4">
            <div class="tera-sidebar-card sticky-top" style="top: 20px;">
                <div class="card-body p-4">
                    <!-- Entreprise -->
                    <div class="text-center mb-4">
                        <div class="tera-company-logo-large mb-3">
                            <i class="bi bi-building"></i>
                        </div>
                        <h4 class="fw-bold mb-1">{{ offre.entreprise }}</h4>
                        <p class="text-muted mb-0">{{ offre.lieu }}</p>
                    </div>

                    <!-- Statut candidature -->
                    {% if dejaPostule %}
                        <div class="tera-status-applied mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            Candidature envoyée
                        </div>
                    {% else %}
                        <a href="{{ path('apprenant_stage_postuler', {id: offre.id}) }}" class="tera-btn-postuler w-100 mb-3">
                            <i class="bi bi-send-fill me-2"></i>Postuler maintenant
                        </a>
                    {% endif %}

                    <a href="{{ path('apprenant_stages_index') }}" class="tera-btn-back w-100 mb-4">
                        <i class="bi bi-arrow-left me-2"></i>Retour aux offres
                    </a>

                    <hr class="my-4">

                    <!-- Informations clés -->
                    <h5 class="tera-sidebar-title mb-3"><i class="bi bi-info-circle me-2"></i>Informations</h5>
                    <div class="tera-info-list">
                        <div class="tera-info-item">
                            <i class="bi bi-calendar-range"></i>
                            <div>
                                <div class="tera-info-label">Durée</div>
                                <div class="tera-info-value">{{ offre.duree }}</div>
                            </div>
                        </div>
                        <div class="tera-info-item">
                            <i class="bi bi-calendar-event"></i>
                            <div>
                                <div class="tera-info-label">Début</div>
                                <div class="tera-info-value">{{ offre.dateDebut|date('d/m/Y') }}</div>
                            </div>
                        </div>
                        <div class="tera-info-item">
                            <i class="bi bi-calendar-check"></i>
                            <div>
                                <div class="tera-info-label">Fin</div>
                                <div class="tera-info-value">{{ offre.dateFin|date('d/m/Y') }}</div>
                            </div>
                        </div>
                        {% if offre.domaine %}
                        <div class="tera-info-item">
                            <i class="bi bi-tag"></i>
                            <div>
                                <div class="tera-info-label">Domaine</div>
                                <div class="tera-info-value">{{ offre.domaine }}</div>
                            </div>
                        </div>
                        {% endif %}
                        {% if offre.remuneration %}
                        <div class="tera-info-item">
                            <i class="bi bi-cash-coin"></i>
                            <div>
                                <div class="tera-info-label">Rémunération</div>
                                <div class="tera-info-value">{{ offre.remuneration }}</div>
                            </div>
                        </div>
                        {% endif %}
                        <div class="tera-info-item">
                            <i class="bi bi-calendar3"></i>
                            <div>
                                <div class="tera-info-label">Publié le</div>
                                <div class="tera-info-value">{{ offre.datePublication|date('d/m/Y') }}</div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Partage -->
                    <h6 class="tera-sidebar-title mb-3"><i class="bi bi-share me-2"></i>Partager</h6>
                    <div class="d-flex gap-2">
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('apprenant_stage_show', {'id': offre.id}) }}" 
                           target="_blank" class="tera-share-btn tera-share-facebook flex-fill">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://twitter.com/intent/tweet?text={{ offre.titre|url_encode }}&url={{ url('apprenant_stage_show', {'id': offre.id}) }}" 
                           target="_blank" class="tera-share-btn tera-share-twitter flex-fill">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="mailto:?subject={{ offre.titre|url_encode }}&body={{ url('apprenant_stage_show', {'id': offre.id}) }}" 
                           class="tera-share-btn tera-share-email flex-fill">
                            <i class="bi bi-envelope"></i>
                        </a>
                        <button class="tera-share-btn tera-share-link flex-fill" onclick="copyToClipboard()">
                            <i class="bi bi-link-45deg"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function copyToClipboard() {
    const url = window.location.href;
    navigator.clipboard.writeText(url).then(() => {
        alert('Lien copié dans le presse-papiers !');
    });
}
</script>

