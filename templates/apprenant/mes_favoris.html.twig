/* Animations */
.formation-item {
    animation: fadeInUp 0.5s ease-out;
    animation-fill-mode: both;
}

.formation-item:nth-child(1) { animation-delay: 0.1s; }
.formation-item:nth-child(2) { animation-delay: 0.2s; }
.formation-item:nth-child(3) { animation-delay: 0.3s; }
.formation-item:nth-child(4) { animation-delay: 0.4s; }
.formation-item:nth-child(5) { animation-delay: 0.5s; }
.formation-item:nth-child(6) { animation-delay: 0.6s; }

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sortButtons = document.querySelectorAll('.tera-sort-btn');
    const container = document.getElementById('favorisContainer');
    const items = Array.from(document.querySelectorAll('.formation-item'));

    // Fonction de tri
    sortButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Update active button
            sortButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');

            const sortType = this.dataset.sort;
            let sortedItems;

            switch(sortType) {
                case 'date':
                    sortedItems = items.sort((a, b) => {
                        return new Date(b.dataset.date) - new Date(a.dataset.date);
                    });
                    break;
                case 'title':
                    sortedItems = items.sort((a, b) => {
                        return a.dataset.title.localeCompare(b.dataset.title);
                    });
                    break;
                case 'price':
                    sortedItems = items.sort((a, b) => {
                        return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
                    });
                    break;
            }

            // Réorganiser les éléments
            sortedItems.forEach(item => {
                container.appendChild(item);
            });
        });
    });
});

