{% extends 'base.html.twig' %}

{% block title %}Mes Favoris{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- En-tête moderne -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-2">
                       Mes Favoris
                    </h1>
                    <p class="lead text-muted mb-0">Retrouvez vos formations préférées en un clin d'œil</p>
                </div>
                <a href="{{ path('apprenant_formations_index') }}" class="tera-btn-discover">
                    <i class="bi bi-search me-2"></i>Découvrir plus
                </a>
            </div>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if favoris is empty %}
        <div class="tera-empty-state">
            <div class="tera-empty-icon">
                <i class="bi bi-star"></i>
            </div>
            <h3 class="fw-bold text-dark mb-3">Aucune formation favorite</h3>
            <p class="text-muted mb-4">Ajoutez des formations à vos favoris pour les retrouver facilement !</p>
            <a href="{{ path('apprenant_formations_index') }}" class="tera-btn-explore">
                <i class="bi bi-mortarboard me-2"></i>Explorer les formations
            </a>
        </div>
    {% else %}
        <!-- Barre d'actions -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="tera-sort-options">
                <button class="tera-sort-btn active" data-sort="date">
                    <i class="bi bi-calendar me-1"></i>Plus récents
                </button>
                <button class="tera-sort-btn" data-sort="title">
                    <i class="bi bi-sort-alpha-down me-1"></i>A-Z
                </button>
                <button class="tera-sort-btn" data-sort="price">
                    <i class="bi bi-cash me-1"></i>Prix
                </button>
            </div>
            <button class="tera-btn-clear-all" onclick="confirmClearAll()">
                <i class="bi bi-trash me-1"></i>Tout retirer
            </button>
        </div>

        <div class="row g-4" id="favorisContainer">
            {% for favori in favoris %}
            <div class="col-lg-4 col-md-6 formation-item" data-date="{{ favori.dateAjout|date('Y-m-d') }}" data-title="{{ favori.formation.titre }}" data-price="{{ favori.formation.typeAcces == 'gratuit' ? 0 : (favori.formation.prixPromo ?: favori.formation.prix) }}">
                <div class="card tera-card h-100 border-0 overflow-hidden">
                    <!-- HEADER IMAGE -->
                    <div class="tera-cover position-relative">
                        {% if favori.formation.imageCouverture %}
                            <img src="{{ asset('uploads/images/' ~ favori.formation.imageCouverture) }}" 
                                 class="tera-cover-img"
                                 alt="{{ favori.formation.titre }}">
                        {% else %}
                            <div class="tera-cover-img d-flex align-items-center justify-content-center"
                                 style="background:#f2f4f7;">
                                <i class="bi bi-mortarboard-fill" style="font-size:4rem;opacity:.15;"></i>
                            </div>
                        {% endif %}

                        <!-- Badge Favori Enhanced -->
                        <div class="tera-favorite-badge-enhanced">
                            <div class="tera-star-wrapper">
                                <i class="bi bi-star-fill"></i>
                                <div class="tera-star-ripple"></div>
                                <div class="tera-star-ripple tera-star-ripple-2"></div>
                            </div>
                        </div>

                        <!-- Ribbon dynamique -->
                        {% if favori.formation.typeAcces == 'gratuit' %}
                            <div class="tera-ribbon tera-ribbon-free">GRATUIT</div>
                        {% elseif favori.formation.prixPromo and favori.formation.prixPromo < favori.formation.prix %}
                            <div class="tera-ribbon tera-ribbon-promo">PROMO</div>
                        {% endif %}
                    </div>

                    <!-- BODY -->
                    <div class="p-3 p-md-4">
                        <div class="d-flex gap-2 mb-2 flex-wrap">
                            <span class="badge tera-badge-category">{{ favori.formation.categorie }}</span>
                            <span class="badge tera-badge-level">{{ favori.formation.niveau }}</span>
                            <span class="badge tera-badge-langue">
                                <i class="bi bi-globe2 me-1"></i>{{ favori.formation.langue }}
                            </span>
                        </div>

                        <h5 class="tera-title mb-3">
                            {{ favori.formation.titre }}
                        </h5>

                        <div class="tera-live mb-3">
                            <span class="tera-live-dot"></span>
                            <span class="tera-live-text">Live Assistance</span>
                            <span class="tera-live-sub">included</span>
                        </div>

                        <p class="tera-desc mb-4">
                            {{ favori.formation.descriptionCourte }}
                        </p>

                        <!-- FOOTER -->
                        <div class="d-flex align-items-center justify-content-between gap-3 mb-4">
                            <div class="tera-price">
                                {% if favori.formation.typeAcces == 'gratuit' %}
                                    <span>0</span> <small>DT</small>
                                {% elseif favori.formation.prixPromo and favori.formation.prixPromo < favori.formation.prix %}
                                    <div class="d-flex flex-column">
                                        <span class="tera-price-old">{{ favori.formation.prix }} DT</span>
                                        <div>
                                            <span>{{ favori.formation.prixPromo }}</span> <small>DT</small>
                                        </div>
                                    </div>
                                {% else %}
                                    <span>{{ favori.formation.prix }}</span> <small>DT</small>
                                {% endif %}
                            </div>

                            <a href="{{ path('apprenant_formation_show', {'id': favori.formation.id}) }}"
                               class="btn tera-btn">
                                En savoir plus <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>

                        <!-- Formateur Section -->
                        <div class="tera-teacher-footer pt-3 border-top">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center gap-2">
                                    {% if favori.formation.formateur.photo %}
                                        <img src="{{ asset('uploads/' ~ favori.formation.formateur.photo) }}" 
                                             alt="{{ favori.formation.formateur.prenom }}"
                                             class="tera-teacher-avatar-card">
                                    {% else %}
                                        <div class="tera-teacher-avatar-card tera-teacher-avatar-default-card">
                                            {{ favori.formation.formateur.prenom|slice(0,1) }}{{ favori.formation.formateur.nom|slice(0,1) }}
                                        </div>
                                    {% endif %}
                                    <div>
                                        <div class="tera-teacher-label" style="margin-left: 3px;">Formateur</div>
                                        <div class="tera-teacher-name-card" style="margin-left: 4px;">
                                            {{ favori.formation.formateur.prenom }} {{ favori.formation.formateur.nom }}
                                        </div>
                                    </div>
                                </div>
                                <form method="post" action="{{ path('apprenant_toggle_favori', {'id': favori.formation.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('favori' ~ favori.formation.id) }}">
                                    <button type="submit" class="tera-btn-star-remove" title="Retirer des favoris">
                                        <i class="bi bi-star-fill"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="tera-date-added mt-2">
                                <i class="bi bi-calendar-check me-1"></i>
                                <span>Ajouté le {{ favori.dateAjout|date('d M Y') }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

