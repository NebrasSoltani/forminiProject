{% extends 'base.html.twig' %}

{% block title %}{{ categorie }} - Formations{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('apprenant_formations_index') }}">Formations</a></li>
                <li class="breadcrumb-item active">{{ categorie }}</li>
            </ol>
        </nav>
        <h1>üìö Formations en {{ categorie }}</h1>
        <p class="text-muted">{{ formations|length }} formation(s) disponible(s)</p>
    </div>

    {% if formations is empty %}
        <div class="alert alert-info text-center">
            <h4>Aucune formation dans cette cat√©gorie</h4>
            <a href="{{ path('apprenant_formations_index') }}" class="btn btn-primary mt-3">
                Voir toutes les formations
            </a>
        </div>
    {% else %}
        <div class="row">
            {% for formation in formations %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm hover-shadow">
                    {% if formation.imageCouverture %}
                        <img src="{{ asset('uploads/images/' ~ formation.imageCouverture) }}" class="card-img-top" alt="{{ formation.titre }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-white fs-1">üìö</span>
                        </div>
                    {% endif %}

                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <span class="badge bg-info">{{ formation.niveau }}</span>
                            {% if formation.typeAcces == 'gratuit' %}
                                <span class="badge bg-success">üÜì Gratuit</span>
                            {% endif %}
                        </div>

                        <h5 class="card-title">{{ formation.titre }}</h5>
                        <p class="card-text text-muted small">{{ formation.descriptionCourte|slice(0, 100) }}...</p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">‚è±Ô∏è {{ formation.duree }}h</small>
                                <small class="text-muted">üìö {{ formation.nombreLecons }} le√ßons</small>
                            </div>

                            <a href="{{ path('apprenant_formation_show', {'id': formation.id}) }}" class="btn btn-primary w-100">
                                Voir d√©tails ‚Üí
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<style>
.hover-shadow {
    transition: all 0.3s ease;
}
.hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
}
</style>
{% endblock %}