{% extends 'base.html.twig' %}

{% block title %}{{ formation.titre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Breadcrumb Modern -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a href="{{ path('apprenant_formations_index') }}" class="text-decoration-none"><i class="bi bi-house-door me-1"></i>Formations</a></li>
            <li class="breadcrumb-item"><a href="{{ path('apprenant_formations_by_category', {'categorie': formation.categorie}) }}" class="text-decoration-none">{{ formation.categorie }}</a></li>
            <li class="breadcrumb-item active">{{ formation.titre }}</li>
        </ol>
    </nav>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
            <i class="bi bi-x-circle-fill me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row g-4">
        <!-- Colonne principale -->
        <div class="col-lg-8">
            <!-- En-t√™te de la formation -->
            <div class="mb-4">
                <h1 class="display-5 fw-bold text-dark mb-3">{{ formation.titre }}</h1>
                <p class="lead text-muted mb-4">{{ formation.descriptionCourte }}</p>
                
                <div class="d-flex flex-wrap gap-2 mb-4">
                    <span class="badge tera-badge-category">{{ formation.categorie }}</span>
                    <span class="badge tera-badge-level">{{ formation.niveau }}</span>
                    <span class="badge tera-badge-langue">{{ formation.langue }}</span>
                    {% if formation.typeAcces == 'gratuit' %}
                        <span class="badge tera-badge-free">üÜì Gratuit</span>
                    {% endif %}
                </div>

                <!-- Stats Formation -->
                <div class="d-flex flex-wrap gap-4 text-muted mb-4">
                    <div class="d-flex align-items-center gap-2">
                        <div class="tera-icon-badge">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <span class="fw-semibold">{{ formation.formateur.nom }} {{ formation.formateur.prenom }}</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="tera-icon-badge">
                            <i class="bi bi-clock"></i>
                        </div>
                        <span>{{ formation.duree }} heures</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="tera-icon-badge">
                            <i class="bi bi-book"></i>
                        </div>
                        <span>{{ formation.nombreLecons }} le√ßons</span>
                    </div>
                </div>
            </div>

            <!-- Image de couverture -->
            {% if formation.imageCouverture %}
                <div class="mb-4">
                    <div class="tera-image-container">
                        <img src="{{ asset('uploads/images/' ~ formation.imageCouverture) }}" 
                             alt="{{ formation.titre }}" 
                             class="tera-cover-image">
                    </div>
                </div>
            {% endif %}

            <!-- Onglets de contenu Modern -->
            <ul class="nav nav-pills tera-nav-pills mb-4" id="formationTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button">
                        <i class="bi bi-file-text me-2"></i>Description
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="programme-tab" data-bs-toggle="tab" data-bs-target="#programme" type="button">
                        <i class="bi bi-list-ul me-2"></i>Programme
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="objectifs-tab" data-bs-toggle="tab" data-bs-target="#objectifs" type="button">
                        <i class="bi bi-bullseye me-2"></i>Objectifs
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="formateur-tab" data-bs-toggle="tab" data-bs-target="#formateur" type="button">
                        <i class="bi bi-person-badge me-2"></i>Formateur
                    </button>
                </li>
            </ul>

            <div class="tab-content" id="formationTabsContent">
                <!-- Description -->
                <div class="tab-pane fade show active" id="description" role="tabpanel">
                    <div class="tera-content-card">
                        <div class="card-body">
                            <h4 class="tera-section-title">Description d√©taill√©e</h4>
                            <p class="tera-text-content">{{ formation.descriptionDetaillee|nl2br }}</p>

                            {% if formation.prerequis %}
                                <hr class="my-4">
                                <h5 class="tera-subsection-title"><i class="bi bi-check-circle me-2 text-success"></i>Pr√©-requis</h5>
                                <p class="tera-text-content">{{ formation.prerequis|nl2br }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Programme -->
                <div class="tab-pane fade" id="programme" role="tabpanel">
                    <div class="tera-content-card">
                        <div class="card-body">
                            <h4 class="tera-section-title">Programme de la formation</h4>
                            
                            {% if formation.lecons|length > 0 %}
                                <div class="tera-lecon-list mt-3">
                                    {% for lecon in formation.lecons %}
                                    <div class="tera-lecon-item">
                                        <div class="d-flex w-100 justify-content-between align-items-start">
                                            <div class="d-flex gap-3 align-items-start flex-grow-1">
                                                <div class="tera-lecon-number">{{ lecon.ordre }}</div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1 fw-bold">{{ lecon.titre }}</h6>
                                                    {% if lecon.description %}
                                                        <p class="mb-0 small text-muted">{{ lecon.description }}</p>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            {% if lecon.duree %}
                                                <span class="tera-lecon-duration"><i class="bi bi-clock me-1"></i>{{ lecon.duree }} min</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <pre class="tera-code-block mt-3">{{ formation.programme }}</pre>
                            {% endif %}

                            {% if formation.format == 'live' or formation.format == 'presentiel' %}
                                <hr class="my-4">
                                <h5 class="tera-subsection-title"><i class="bi bi-calendar-event me-2 text-primary"></i>Planning</h5>
                                {% if formation.dateDebut %}
                                    <p><strong>Date de d√©but :</strong> {{ formation.dateDebut|date('d/m/Y H:i') }}</p>
                                {% endif %}
                                {% if formation.nombreSeances %}
                                    <p><strong>Nombre de s√©ances :</strong> {{ formation.nombreSeances }}</p>
                                {% endif %}
                                {% if formation.planning %}
                                    <pre class="tera-code-block">{{ formation.planning }}</pre>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Objectifs -->
                <div class="tab-pane fade" id="objectifs" role="tabpanel">
                    <div class="tera-content-card">
                        <div class="card-body">
                            <h4 class="tera-section-title"><i class="bi bi-bullseye me-2"></i>Objectifs p√©dagogiques</h4>
                            <p class="tera-text-content">{{ formation.objectifsPedagogiques|nl2br }}</p>

                            <hr class="my-4">

                            <h5 class="tera-subsection-title"><i class="bi bi-gift me-2 text-success"></i>Ce que vous obtiendrez</h5>
                            <div class="row mt-3 g-3">
                                {% if formation.certificat %}
                                <div class="col-md-6">
                                    <div class="tera-feature-item">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Certificat de fin de formation</span>
                                    </div>
                                </div>
                                {% endif %}
                                {% if formation.quiz %}
                                <div class="col-md-6">
                                    <div class="tera-feature-item">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Quiz d'√©valuation</span>
                                    </div>
                                </div>
                                {% endif %}
                                {% if formation.fichiersTelechargeables %}
                                <div class="col-md-6">
                                    <div class="tera-feature-item">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Fichiers t√©l√©chargeables</span>
                                    </div>
                                </div>
                                {% endif %}
                                {% if formation.forum %}
                                <div class="col-md-6">
                                    <div class="tera-feature-item">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <span>Acc√®s au forum</span>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formateur -->
                <div class="tab-pane fade" id="formateur" role="tabpanel">
                    <div class="tera-content-card">
                        <div class="card-body">
                            <h4 class="tera-section-title"><i class="bi bi-person-badge me-2"></i>√Ä propos du formateur</h4>
                            <div class="d-flex align-items-center mt-4">
                                {% if formation.formateur.photo %}
                                    <img src="{{ asset('uploads/photos/' ~ formation.formateur.photo) }}" 
                                         alt="{{ formation.formateur.prenom }}"
                                         class="tera-formateur-avatar me-3">
                                {% else %}
                                    <div class="tera-formateur-avatar tera-formateur-avatar-default me-3">
                                        {{ formation.formateur.prenom|slice(0, 1) }}{{ formation.formateur.nom|slice(0, 1) }}
                                    </div>
                                {% endif %}
                                <div>
                                    <h5 class="mb-1 fw-bold">{{ formation.formateur.nom }} {{ formation.formateur.prenom }}</h5>
                                    <p class="text-muted mb-0"><i class="bi bi-envelope me-1"></i>{{ formation.formateur.email }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar droit -->
        <div class="col-lg-4">
            <div class="tera-sidebar-card sticky-top" style="top: 20px;">
                <div class="card-body p-4">
                    <!-- Prix -->
                    <div class="text-center mb-4">
                        {% if formation.typeAcces == 'gratuit' %}
                            <div class="tera-price-badge-free">
                                <i class="bi bi-gift me-2"></i>GRATUIT
                            </div>
                        {% else %}
                            {% if formation.prixPromo %}
                                <p class="tera-price-old-large">{{ formation.prix }} DT</p>
                                <h2 class="tera-price-promo mb-2">{{ formation.prixPromo }} DT</h2>
                                <span class="tera-promo-badge">Prix promotionnel</span>
                            {% else %}
                                <h2 class="tera-price-regular">{{ formation.prix }} DT</h2>
                            {% endif %}
                        {% endif %}
                    </div>

                    <!-- Boutons d'action -->
                    {% if app.user %}
                        {% set isInscrit = false %}
                        {% set isFavori = false %}
                        
                        {# V√©rifier si l'utilisateur est inscrit (√† impl√©menter dans le contr√¥leur) #}
                        {% if inscription is defined and inscription %}
                            {% set isInscrit = true %}
                        {% endif %}
                        
                        {% if favori is defined and favori %}
                            {% set isFavori = true %}
                        {% endif %}

                        {# Bouton d'inscription ou acc√®s √† la formation #}
                        {% if isInscrit %}
                            <a href="{{ path('apprenant_suivre_formation', {'id': formation.id}) }}" class="tera-btn-continue w-100 mb-3">
                                <i class="bi bi-play-circle me-2"></i>Continuer la formation
                            </a>
                        {% else %}
                            {% if formation.typeAcces == 'gratuit' %}
                                <form method="post" action="{{ path('apprenant_inscrire', {'id': formation.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('inscrire' ~ formation.id) }}">
                                    <button type="submit" class="tera-btn-inscrit w-100 mb-3">
                                        <i class="bi bi-mortarboard me-2"></i>S'inscrire gratuitement
                                    </button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('apprenant_inscrire', {'id': formation.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('inscrire' ~ formation.id) }}">
                                    <button type="submit" class="tera-btn-acheter w-100 mb-3">
                                        <i class="bi bi-cart-check me-2"></i>Acheter maintenant
                                    </button>
                                </form>
                            {% endif %}
                        {% endif %}

                        {# Bouton Favoris #}
                        <form method="post" action="{{ path('apprenant_toggle_favori', {'id': formation.id}) }}" class="mb-3">
                            <input type="hidden" name="_token" value="{{ csrf_token('favori' ~ formation.id) }}">
                            <button type="submit" class="tera-btn-favori {{ isFavori ? 'active' : '' }} w-100">
                                {% if isFavori %}
                                    <i class="bi bi-heart-fill me-2"></i>Retirer des favoris
                                {% else %}
                                    <i class="bi bi-heart me-2"></i>Ajouter aux favoris
                                {% endif %}
                            </button>
                        </form>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="tera-btn-login w-100 mb-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Connectez-vous pour s'inscrire
                        </a>
                        <a href="{{ path('app_register') }}" class="tera-btn-register w-100 mb-3">
                            <i class="bi bi-person-plus me-2"></i>Cr√©er un compte
                        </a>
                    {% endif %}

                    <hr class="my-4">

                    <!-- Informations cl√©s -->
                    <h5 class="tera-sidebar-title mb-3"><i class="bi bi-info-circle me-2"></i>Informations</h5>
                    <div class="tera-info-list">
                        <div class="tera-info-item">
                            <i class="bi bi-clock"></i>
                            <div>
                                <div class="tera-info-label">Dur√©e</div>
                                <div class="tera-info-value">{{ formation.duree }} heures</div>
                            </div>
                        </div>
                        <div class="tera-info-item">
                            <i class="bi bi-book"></i>
                            <div>
                                <div class="tera-info-label">Le√ßons</div>
                                <div class="tera-info-value">{{ formation.nombreLecons }}</div>
                            </div>
                        </div>
                        <div class="tera-info-item">
                            <i class="bi bi-bar-chart"></i>
                            <div>
                                <div class="tera-info-label">Niveau</div>
                                <div class="tera-info-value">{{ formation.niveau }}</div>
                            </div>
                        </div>
                        <div class="tera-info-item">
                            <i class="bi bi-globe"></i>
                            <div>
                                <div class="tera-info-label">Langue</div>
                                <div class="tera-info-value">{{ formation.langue }}</div>
                            </div>
                        </div>
                        <div class="tera-info-item">
                            <i class="bi bi-display"></i>
                            <div>
                                <div class="tera-info-label">Format</div>
                                <div class="tera-info-value">{{ formation.format }}</div>
                            </div>
                        </div>
                        {% if formation.typeAcces == 'payant' %}
                        <div class="tera-info-item">
                            <i class="bi bi-credit-card"></i>
                            <div>
                                <div class="tera-info-label">Type d'achat</div>
                                <div class="tera-info-value">{{ formation.typeAchat }}</div>
                            </div>
                        </div>
                        {% endif %}
                    </div>

                    <hr class="my-4">

                    <!-- Partage -->
                    <h6 class="tera-sidebar-title mb-3"><i class="bi bi-share me-2"></i>Partager</h6>
                    <div class="d-flex gap-2">
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('apprenant_formation_show', {'id': formation.id}) }}" 
                           target="_blank" class="tera-share-btn tera-share-facebook flex-fill">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://twitter.com/intent/tweet?text={{ formation.titre|url_encode }}&url={{ url('apprenant_formation_show', {'id': formation.id}) }}" 
                           target="_blank" class="tera-share-btn tera-share-twitter flex-fill">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="mailto:?subject={{ formation.titre|url_encode }}&body={{ url('apprenant_formation_show', {'id': formation.id}) }}" 
                           class="tera-share-btn tera-share-email flex-fill">
                            <i class="bi bi-envelope"></i>
                        </a>
                        <button class="tera-share-btn tera-share-link flex-fill" onclick="copyToClipboard()">
                            <i class="bi bi-link-45deg"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function copyToClipboard() {
    const url = window.location.href;
    navigator.clipboard.writeText(url).then(() => {
        alert('Lien copi√© dans le presse-papiers !');
    });
}
</script>

